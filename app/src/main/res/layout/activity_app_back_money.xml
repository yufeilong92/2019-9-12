<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:ignore="MissingConstraints,DuplicateIds">

    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root_title">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_17"
                android:paddingEnd="@dimen/dp_17">

                <TextView
                    android:id="@+id/tv_cate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="申请类型："
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />


                <TextView
                    android:id="@+id/tv_choose_reason"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:drawableEnd="@mipmap/jft_but_arrowdown"
                    android:gravity="center_vertical"
                    android:hint="请选择退款原因"
                    android:textColor="@color/color_444A53"
                    android:textColorHint="@color/color_7B8391"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintLeft_toRightOf="@id/tv_cate"
                    app:layout_constraintRight_toRightOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_17"
                android:paddingEnd="@dimen/dp_17">

                <TextView
                    android:id="@+id/tv_rec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="收货状态："
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />


                <TextView
                    android:id="@+id/tv_choose_rec"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:drawableEnd="@mipmap/jft_but_arrowdown"
                    android:gravity="center_vertical"
                    android:hint="点击选择收货状态"
                    android:textColor="@color/color_444A53"
                    android:textColorHint="@color/color_7B8391"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintLeft_toRightOf="@id/tv_rec"
                    app:layout_constraintRight_toRightOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_17"
                android:paddingEnd="@dimen/dp_17">

                <TextView
                    android:id="@+id/tv_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="申请原因："
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />


                <TextView
                    android:id="@+id/tv_apply_reason"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:drawableEnd="@mipmap/jft_but_arrowdown"
                    android:gravity="center_vertical"
                    android:hint="点击选择申请原因"
                    android:textColor="@color/color_444A53"
                    android:textColorHint="@color/color_7B8391"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintLeft_toRightOf="@id/tv_reason"
                    app:layout_constraintRight_toRightOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_17">


                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="退款金额："
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />


                <TextView
                    android:id="@+id/tv_should_money"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintLeft_toRightOf="@id/tv_money" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tv_money_tip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="#F1F4F8"
                android:paddingStart="@dimen/dp_17"
                android:textColorHint="@color/color_7B8391"
                android:textSize="@dimen/ts_12" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_130"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_17"
                android:paddingTop="@dimen/dp_17"
                android:paddingEnd="@dimen/dp_17">

                <TextView
                    android:id="@+id/tv_apply_sey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请说明（选填）"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/ts_14" />

                <EditText
                    android:id="@+id/et_apply_tip"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@null"
                    android:gravity="start"
                    android:hint="请详细填写申请说明。"
                    android:maxLines="4"
                    android:minHeight="@dimen/dp_80"
                    android:paddingTop="@dimen/dp_10"
                    android:maxLength="200"
                    android:textColor="@color/color_444A53"
                    android:textColorHint="@color/edit_hint_color"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_apply_sey" />


            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tv_content_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="right"
                android:paddingEnd="@dimen/dp_17"
                android:text="0/200"
                android:maxLength="200"
                android:textColor="@color/color_7B8391"
                android:textSize="@dimen/ts_13" />


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:padding="@dimen/dp_17">

                <TextView
                    android:id="@+id/tv_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传凭证"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />


                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@mipmap/jft_but_modifytheavatar"
                    app:layout_constraintTop_toBottomOf="@id/tv_image" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_img"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    app:layout_constraintLeft_toRightOf="@id/iv_image"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv_image" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_17">


                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_51"
                    android:gravity="center"
                    android:text="联系电话："
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />


                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_51"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintLeft_toRightOf="@id/tv_contact" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_margin="@dimen/dp_24">


                <Button
                    android:id="@+id/btn_commit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:background="@drawable/normal_red_btn_bg"
                    android:text="提交申请"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>