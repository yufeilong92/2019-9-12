<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />

    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root_title" />

    <TextView
        android:id="@+id/tv_phone_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:text="手机号"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_bg" />

    <EditText
        android:id="@+id/et_change_phone"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_48"
        android:inputType="phone"
        android:maxLength="11"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="@string/please_new_phone"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:textSize="@dimen/ts_15"
        app:layout_constraintLeft_toRightOf="@id/tv_phone_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_phone_title" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/line_color"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_title"
        app:layout_goneMarginRight="@dimen/dp_10" />

    <TextView
        android:id="@+id/tv_code_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:text="验证码"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line" />

    <EditText
        android:id="@+id/et_change_phone_code"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="@string/please_new_code"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:inputType="number"
        android:maxLength="8"
        android:textSize="@dimen/ts_15"
        app:layout_constraintLeft_toRightOf="@id/tv_code_title"
        app:layout_constraintRight_toLeftOf="@id/view_line_height"
        app:layout_constraintTop_toTopOf="@id/tv_code_title" />

    <View
        android:id="@+id/view_line_height"
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_4"
        android:background="@color/line_color"
        app:layout_constraintBottom_toBottomOf="@id/et_change_phone_code"
        app:layout_constraintLeft_toRightOf="@id/et_change_phone_code"
        app:layout_constraintRight_toLeftOf="@id/btn_change_phone_code"
        app:layout_constraintTop_toBottomOf="@id/view_line" />

    <Button
        android:id="@+id/btn_change_phone_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        style="?android:attr/borderlessButtonStyle"
        android:text="点击获取"
        android:textColor="@color/color_ED772F"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_change_phone_code" />

    <Button
        android:id="@+id/btn_subimt_phone"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_32"
        android:text="立即换绑"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_17"
        android:background="@drawable/normal_red_btn_bg"
        app:layout_constraintTop_toBottomOf="@id/et_change_phone_code"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>