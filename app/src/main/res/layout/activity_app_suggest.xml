<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:ignore="MissingConstraints">

    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root_title">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_suggest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/question_opinion"
                android:textColor="@color/color_444A53"
                android:textSize="@dimen/ts_25"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv_suggest_about"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:text="@string/question_opinion_hint"
                android:textColor="@color/color_444A53"
                android:textSize="@dimen/ts_13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_suggest" />

            <LinearLayout
                android:id="@+id/ll_input_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_white_rectangle"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_suggest_about">

                <EditText
                    android:id="@+id/et_input_suggest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:background="@color/color_transparent"
                    android:gravity="start|top"
                    android:hint="@string/question_opinion_hint1"
                    android:minHeight="@dimen/dp_100"
                    android:textSize="@dimen/ts_13" />

                <TextView
                    android:id="@+id/tv_text_lenght"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="right"
                    android:hint="0/100"
                    android:textColor="@color/color_444A53"
                    android:textSize="13sp"
                    tools:ignore="RtlHardcoded" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_up_load"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/text_up_img"
                android:textColor="@color/color_444A53"
                android:textSize="@dimen/ts_13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_input_content" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_btm"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_rectangle"
                android:padding="@dimen/dp_18"
                app:layout_constraintTop_toBottomOf="@id/tv_up_load">

                <ImageView
                    android:id="@+id/iv_up_img"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:background="@mipmap/jft_but_photoupload" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_img"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    app:layout_constraintLeft_toRightOf="@id/iv_up_img"
                    app:layout_constraintRight_toRightOf="parent" />
            </android.support.constraint.ConstraintLayout>


            <TextView
                android:id="@+id/tv_report_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/text_report_tip"
                app:layout_constraintTop_toBottomOf="@id/ctl_btm" />

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@drawable/normal_red_btn_bg"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_17"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_report_tip" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_60"
                app:layout_constraintTop_toBottomOf="@id/btn_commit" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>