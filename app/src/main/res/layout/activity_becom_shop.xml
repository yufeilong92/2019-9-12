<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:fillViewport="true"
    tools:ignore="MissingConstraints,RtlSymmetry,ContentDescription">

    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root_title">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                android:background="@mipmap/jft_img_openupbusinessmenbanner" />

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_51"
                android:gravity="center"
                android:paddingStart="@dimen/dp_13"
                android:text="@string/text_your_name"
                android:textColor="@color/black_33"
                android:textSize="@dimen/ts_15"
                app:layout_constraintTop_toBottomOf="@id/iv_header" />

            <EditText
                android:id="@+id/et_your_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_13"
                android:layout_marginEnd="@dimen/dp_13"
                android:background="@null"
                android:hint="@string/hint_your_name"
                android:lines="1"
                android:textColor="@color/color_444A53"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/ts_14"
                app:layout_constraintBottom_toBottomOf="@id/tv_shop_name"
                app:layout_constraintLeft_toRightOf="@id/tv_shop_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_shop_name" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_E9EFF7"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_name" />


            <TextView
                android:id="@+id/tv_shop_desc"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_51"
                android:gravity="center"
                android:paddingStart="@dimen/dp_13"
                android:text="@string/text_your_phone"
                android:textColor="@color/black_33"
                android:textSize="@dimen/ts_15"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_name" />


            <EditText
                android:id="@+id/et_your_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_13"
                android:layout_marginEnd="@dimen/dp_13"
                android:background="@null"
                android:hint="@string/hint_your_phone"
                android:inputType="number"
                android:lines="1"
                android:maxLength="11"
                android:textColor="@color/color_444A53"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/ts_14"
                app:layout_constraintBottom_toBottomOf="@id/tv_shop_desc"
                app:layout_constraintLeft_toRightOf="@id/tv_shop_desc"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_shop_desc" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_E9EFF7"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_desc" />

            <TextView
                android:id="@+id/tv_shop_sale"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_51"
                android:gravity="center"
                android:paddingStart="@dimen/dp_13"
                android:text="@string/text_your_id"
                android:textColor="@color/black_33"
                android:textSize="@dimen/ts_15"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_desc" />

            <EditText
                android:id="@+id/et_your_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_13"
                android:layout_marginEnd="@dimen/dp_13"
                android:background="@null"
                android:hint="@string/hint_your_id"
                android:lines="1"
                android:textColor="@color/color_444A53"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/ts_14"
                app:layout_constraintBottom_toBottomOf="@id/tv_shop_sale"
                app:layout_constraintLeft_toRightOf="@id/tv_shop_sale"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_shop_sale" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_E9EFF7"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_sale" />

            <TextView
                android:id="@+id/tv_shop_name_"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_51"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:paddingStart="@dimen/dp_13"
                android:text="@string/text_shoper_name"
                android:textColor="@color/black_33"
                android:textSize="@dimen/ts_15"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_sale" />

            <EditText
                android:id="@+id/et_shop_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_13"
                android:layout_marginEnd="@dimen/dp_13"
                android:background="@null"
                android:hint="@string/hint_shoper_name"
                android:textColor="@color/color_444A53"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/ts_14"
                app:layout_constraintBottom_toBottomOf="@id/tv_shop_name_"
                app:layout_constraintLeft_toRightOf="@id/tv_shop_name_"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_shop_name_" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_E9EFF7"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_name_" />


            <TextView
                android:id="@+id/tv_shop_area"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_51"
                android:gravity="center"
                android:paddingStart="@dimen/dp_13"
                android:text="@string/text_shoper_area"
                android:textColor="@color/black_33"
                android:textSize="@dimen/ts_15"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_name_" />

            <TextView
                android:id="@+id/tv_select_area"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_13"
                android:layout_marginEnd="@dimen/dp_13"
                android:background="@null"
                android:drawableEnd="@mipmap/jft_but_arrow"
                android:drawablePadding="@dimen/dp_10"
                android:hint="@string/hint_shoper_area"
                android:lines="1"
                android:textColor="@color/color_444A53"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/ts_14"
                app:layout_constraintBottom_toBottomOf="@id/tv_shop_area"
                app:layout_constraintLeft_toRightOf="@id/tv_shop_area"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_shop_area" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_E9EFF7"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_area" />


            <TextView
                android:id="@+id/tv_shop_address"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_51"
                android:gravity="center"
                android:paddingStart="@dimen/dp_13"
                android:text="@string/text_shoper_address"
                android:textColor="@color/black_33"
                android:textSize="@dimen/ts_15"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_area" />

            <EditText
                android:id="@+id/et_shop_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_13"
                android:layout_marginEnd="@dimen/dp_13"
                android:background="@null"
                android:hint="@string/hint_shoper_address"
                android:lines="1"
                android:textColor="@color/color_444A53"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/ts_14"
                app:layout_constraintBottom_toBottomOf="@id/tv_shop_address"
                app:layout_constraintLeft_toRightOf="@id/tv_shop_address"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_shop_address" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_E9EFF7"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_address" />


            <TextView
                android:id="@+id/tv_shop_phone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_51"
                android:gravity="center"
                android:paddingStart="@dimen/dp_13"
                android:text="@string/text_shoper_main_category"
                android:textColor="@color/black_33"
                android:textSize="@dimen/ts_15"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_address" />

            <TextView
                android:id="@+id/tv_main_category"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_13"
                android:layout_marginEnd="@dimen/dp_13"
                android:background="@null"
                android:drawableRight="@mipmap/jft_but_arrow"
                android:drawablePadding="@dimen/dp_10"
                android:hint="@string/hint_shoper_category"
                android:lines="1"
                android:textColor="@color/color_444A53"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/ts_14"
                app:layout_constraintBottom_toBottomOf="@id/tv_shop_phone"
                app:layout_constraintLeft_toRightOf="@id/tv_shop_phone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_shop_phone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_E9EFF7"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_phone" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_shop_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_15"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_phone">

                <TextView
                    android:id="@+id/tv_header_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_shop_photo"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/ts_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(建议上传店铺LOGO)："
                    android:layout_marginStart="@dimen/dp_2"
                    app:layout_constraintTop_toTopOf="@id/tv_header_image"
                    app:layout_constraintBottom_toBottomOf="@id/tv_header_image"
                    app:layout_constraintLeft_toRightOf="@id/tv_header_image"
                    android:textColor="@color/red"
                    android:textSize="@dimen/ts_12" />


                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@mipmap/jft_but_photoupload"
                    app:layout_constraintTop_toBottomOf="@id/tv_header_image" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_shop_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    app:layout_constraintLeft_toRightOf="@id/iv_image"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv_image" />
            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_E9EFF7"
                app:layout_constraintTop_toBottomOf="@id/ctl_shop_image" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_qualify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_15"
                app:layout_constraintTop_toBottomOf="@id/ctl_shop_image">

                <TextView
                    android:id="@+id/tv_header_qualify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_shop_qualify_"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/ts_14" />

                <ImageView
                    android:id="@+id/iv_qualify"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@mipmap/jft_but_photoupload"
                    app:layout_constraintTop_toBottomOf="@id/tv_header_qualify" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_shop_qualify"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/iv_qualify"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv_qualify" />
            </android.support.constraint.ConstraintLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_E9EFF7"
                app:layout_constraintTop_toBottomOf="@id/ctl_qualify" />


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:minHeight="@dimen/dp_76"
                android:padding="@dimen/dp_15"
                app:layout_constraintTop_toBottomOf="@id/ctl_qualify">

                <TextView
                    android:id="@+id/tv_your_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_your_info"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/ts_14" />

                <EditText
                    android:id="@+id/et_your_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@null"
                    android:hint="@string/hint_your_desc"
                    android:textColor="@color/color_444A53"
                    android:textColorHint="@color/edit_hint_color"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintLeft_toRightOf="@id/tv_your_desc"
                    app:layout_constraintRight_toRightOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_143"
                android:background="@color/main_color"
                android:padding="@dimen/dp_15"
                app:layout_constraintTop_toBottomOf="@id/ctl_desc">


                <CheckBox
                    android:id="@+id/cb_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:button="@null"
                    android:checked="true"
                    android:drawableStart="@drawable/gender_selector"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="@string/text_read_agree"
                    android:textColor="@color/color_7B8391" />

                <TextView
                    android:id="@+id/tv_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_agreement_"
                    android:textColor="@color/tab_color"
                    app:layout_constraintLeft_toRightOf="@id/cb_agreement" />


                <Button
                    android:id="@+id/btn_commit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@drawable/normal_red_btn_bg"
                    android:text="@string/text_apply_now"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintTop_toBottomOf="@id/cb_agreement" />

            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>