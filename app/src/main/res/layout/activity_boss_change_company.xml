<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.recruit.boss.BossChangeCompanyActivity">

    <include layout="@layout/gm_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_main_17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="公司LOGO" />

                <ImageView
                    android:id="@+id/iv_boss_cci_logo"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:src="@mipmap/jft_but_modifytheavatar" />

            </LinearLayout>

            <View
                style="@style/line_height_one"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16" />

            <TextView
                style="@style/text_main_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司全称" />

            <TextView
                android:id="@+id/tv_boss_cci_name"
                android:gravity="center_vertical"
                style="@style/text_main_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="请输入公司名字"
                android:minHeight="@dimen/dp_40" />

            <View style="@style/line_height_one" />

            <TextView
                style="@style/text_main_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="公司简称" />

            <EditText
                android:id="@+id/et_boss_cci_jianjie"
                style="@style/text_main_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawableRight="@mipmap/jft_but_arrow"
                android:hint="请输入公司简介"
                android:minHeight="@dimen/dp_40" />

            <View style="@style/line_height_one" />

            <TextView
                style="@style/text_main_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="行业领域" />

            <TextView
                android:id="@+id/tv_boss_cci_industry"
                style="@style/text_main_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="请选择行业"
                android:drawableRight="@mipmap/jft_but_arrow"
                android:minHeight="@dimen/dp_40" />

            <View style="@style/line_height_one" />

            <TextView
                style="@style/text_main_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="人员规模" />

            <TextView
                android:id="@+id/tv_boss_cci_scale"
                style="@style/text_main_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="请选择人员规模"
                android:drawableRight="@mipmap/jft_but_arrow"
                android:minHeight="@dimen/dp_40" />

            <View style="@style/line_height_one" />

            <TextView
                style="@style/text_main_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="公司介绍" />

            <TextView
                android:id="@+id/tv_boss_cci_introduce"
                style="@style/text_main_15"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="请输入公司介绍"
                android:drawableRight="@mipmap/jft_but_arrow"
                android:minHeight="@dimen/dp_40" />

            <View style="@style/line_height_one" />

            <TextView
                style="@style/text_main_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="公司介绍" />

            <TextView
                android:id="@+id/tv_boss_cci_address"
                style="@style/text_main_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="请输入公司地址"
                android:drawableRight="@mipmap/jft_but_arrow"
                android:gravity="center_vertical"
                android:minHeight="@dimen/dp_40" />

            <View style="@style/line_height_one" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_16">

                <Button
                    style="@style/text_15_white"
                    android:id="@+id/btn_boss_cci_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/gm_4_bule_bg_circle"
                    android:text="保存" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>