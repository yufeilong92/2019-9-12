<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/gm_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:overScrollMode="never"
        android:fillViewport="true"
        android:id="@+id/nsv_boss_infom_root"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_boss_infom_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="头像"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_boss_infom_header"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_boss_infom_name_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_18"
                    android:text="姓名"
                    style="@style/text_main_14" />


                <EditText
                    android:id="@+id/et_boss_infom_name"
                    style="@style/text_main_15"
                    android:layout_width="match_parent"
                    android:minHeight="@dimen/dp_40"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="请输入姓名"
                    app:layout_constraintTop_toBottomOf="@id/tv_boss_infom_name_tip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_boss_infom_gender_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:text="性别"
                    style="@style/text_main_14" />


                <TextView
                    android:id="@+id/tv_boss_infom_gender"
                    style="@style/text_main_15"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_40"
                    android:background="@color/transparent"
                    android:hint="请选择性别"
                    app:layout_constraintTop_toBottomOf="@id/tv_boss_infom_gender_tip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_boss_infom_position_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:text="我的职务"
                    style="@style/text_main_14" />


                <EditText
                    android:id="@+id/et_boss_infom_position"
                    style="@style/text_main_15"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_40"
                    android:maxLength="30"
                    android:background="@color/transparent"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:hint="请选择职务"
                    app:layout_constraintTop_toBottomOf="@id/tv_boss_infom_position_tip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_boss_infom_phone_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:text="手机号码"
                    style="@style/text_main_14" />


                <EditText
                    android:id="@+id/et_boss_infom_phone"
                    style="@style/text_main_15"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:minHeight="@dimen/dp_40"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:hint="请输入手机号码"
                    app:layout_constraintTop_toBottomOf="@id/tv_boss_infom_phone_tip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_boss_infom_email_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:text="接收简历邮箱"
                   style="@style/text_main_14" />


                <EditText
                    android:id="@+id/et_boss_infom_email"
                    style="@style/text_main_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:minHeight="@dimen/dp_40"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:hint="请输入邮箱"
                    app:layout_constraintTop_toBottomOf="@id/tv_boss_infom_email_tip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_height="@dimen/dp_92">

                <Button
                    android:id="@+id/btn_boss_infom_commit"
                    style="@style/text_15_white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:background="@drawable/shape_gray_job_ok_rectangle"
                    android:text="保存"
                    android:layout_marginBottom="@dimen/dp_16"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>