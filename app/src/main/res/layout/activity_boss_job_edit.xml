<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.recruit.boss.BossJobEditActivity">

    <include layout="@layout/gm_title_right_iv" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_48"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_boss_job_edit_gonumber"
                        style="@style/text_main_15"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/text_main_15"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="人沟通过" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_48"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_boss_job_edit_looknumber"
                        style="@style/text_main_15"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/text_main_15"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="人查看过" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line_height_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:background="@drawable/bg_boss_edit_gray"
                android:orientation="vertical"
                android:padding="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_boss_job_edit_title"
                        style="@style/text_main_17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="餐厅服务员"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_boss_job_edit_work_tag"
                        style="@style/text_bule_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/bg_qian_bule"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_2"
                        android:text="兼职" />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_10"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_boss_job_edit_status"
                        style="@style/text_bule_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/gm_4_bule_radio_line"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_4"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_4"
                        android:text="招聘" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_boss_job_edit_tag"
                    style="@style/text_fu_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#经验不限" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_boss_job_edit_money"
                        style="@style/text_14_yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="150元/" />

                    <TextView
                        android:id="@+id/tv_boss_job_edit_time"
                        style="@style/text_fu_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5月22日" />
                </LinearLayout>

                <View
                    style="@style/line_height_one"
                    android:layout_marginTop="@dimen/dp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_boss_job_edit_city"
                            style="@style/text_main_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/jft_icon_companyaddress"
                            android:drawablePadding="@dimen/dp_10"
                            android:text="" />

                        <TextView
                            android:id="@+id/tv_boss_job_edit_address"
                            style="@style/text_fu_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/jft_but_arrow" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center_vertical">

                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_16"
                    android:background="@color/bule" />

                <TextView
                    style="@style/text_main_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text="职位亮点" />
            </LinearLayout>

            <com.tsyc.tianshengyoucai.view.FlowLayout
                android:id="@+id/fl_boss_job_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_16" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical">

                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_16"
                    android:background="@color/bule" />

                <TextView
                    style="@style/text_main_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text="职位描述" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_boss_job_edit_describe"
                style="@style/text_fu_13"
                android:text=""
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center_vertical">

                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_16"
                    android:background="@color/bule" />

                <TextView
                    style="@style/text_main_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text="公司信息" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_16"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_boss_job_company_logo"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:src="@mipmap/ic_default_picture" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_boss_job_edit_company_name"
                        style="@style/text_main_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="郑州星选海底捞小火锅" />

                    <TextView
                        android:id="@+id/tv_boss_job_edit_company_tag"
                        style="@style/text_fu_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="郑州星选海底捞小火锅" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/jft_but_arrow" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/main_color">

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_16">

                    <Button
                        android:id="@+id/btn_boss_job_edit_btn"
                        style="@style/text_bule_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/bg_qian_bule"
                        android:text="关闭职位" />

                    <Button
                        android:id="@+id/btn_boss_job_edit_edit"
                        style="@style/text_15_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_weight="0.7"
                        android:background="@drawable/gm_4_bule_bg_circle"
                        android:text="重新编辑职位" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>