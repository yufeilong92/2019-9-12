<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.recruit.boss.BossSendInterViewActivity">

    <include layout="@layout/gm_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_send_interview_hear"
                android:src="@mipmap/ic_default_picture"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:layout_gravity="center"/>

            <TextView

                android:layout_marginTop="@dimen/dp_16"
                style="@style/text_main_15"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:text="姓名" />

            <TextView
                android:id="@+id/tv_send_interview_name"
                android:textStyle="bold"
                style="@style/text_main_14"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <View style="@style/line_height_one" />

            <TextView
                style="@style/text_main_15"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:text="面试职位" />

            <TextView
                android:id="@+id/tv_send_interview_job"
                android:textStyle="bold"
                style="@style/text_main_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="" />

            <View style="@style/line_height_one" />

            <TextView
                style="@style/text_main_15"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:text="面试时间" />

            <TextView
                android:id="@+id/tv_send_interview_time"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请选择面试时间" />

            <View style="@style/line_height_one" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_send_interview_submit"
            style="@style/btn_15_bule"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_16"
            android:text="发起面试邀请" />
    </RelativeLayout>
</LinearLayout>