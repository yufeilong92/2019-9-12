<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.recruit.chat.ChatBoss2Activity">

    <include layout="@layout/gm_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/gm_smrlayoyut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_boss_chat_button">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/gm_rlv_content"
                    android:descendantFocusability="beforeDescendants"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <LinearLayout
            android:id="@+id/ll_boss_chat_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_boss_chat_add"
                android:layout_width="@dimen/dp_48"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@mipmap/jft_but_ewlyadded" />

            <View style="@style/line_with_one" />

            <EditText
                android:id="@+id/et_boss_chat_input"
                style="@style/text_main_14"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_48"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="请输入您要咨询的内容"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8" />

            <Button
                android:id="@+id/btn_boss_chat_send"
                style="@style/text_15_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/select_s"
                android:text="发送" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>