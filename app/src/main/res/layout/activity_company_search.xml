<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <include layout="@layout/gm_title" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root_title">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_companysearch_choose_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_20"
                android:text="公司全称"
                android:textColor="@color/color_444A53"
                android:textSize="@dimen/ts_22"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="当前就职的公司全称"
                android:textColor="@color/color_7B8391"
                android:textSize="@dimen/ts_13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_companysearch_choose_role" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_companysearch_company_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_73"
                android:layout_marginTop="@dimen/dp_43"
                app:layout_constraintTop_toBottomOf="@id/tv_companysearch_choose_role">

                <EditText
                    android:id="@+id/et_companysearch_company_name"
                    style="@style/text_main_15"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@null"
                    android:hint="请填写公司名称"
                    android:imeOptions="actionSearch"
                    android:maxLength="50"
                    android:singleLine="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tv_companysearch_content_length"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_companysearch_content_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/50"
                    app:layout_constraintBottom_toBottomOf="@id/et_companysearch_company_name"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/et_companysearch_company_name" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_F0"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_fu_13"
                android:visibility="gone"
                android:text="搜索结果如下(待审核,审核中,无法选择)"
                android:id="@+id/tv_rlc_search_result"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ctl_companysearch_company_name" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_company_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_rlc_search_result" />

            <LinearLayout
                android:id="@+id/ll_company_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_45"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/ctl_companysearch_company_name">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注意事项"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:lineSpacingExtra="@dimen/dp_10"
                    android:text="@string/company_rule"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_13" />

            </LinearLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_company_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                app:layout_constraintBottom_toBottomOf="parent">

                <Button
                    android:id="@+id/btn_companysearch_next"
                    style="@style/text_main_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@drawable/shape_gray_job_normal_rectangle"
                    android:gravity="center"
                    android:text="搜索"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>