<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.recruit.jobmine.DeliveryDetailsActivity">

    <include layout="@layout/gm_title" />

    <ScrollView
        android:visibility="gone"
        android:id="@+id/srl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"

                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_my_delive_detail_title"
                        style="@style/text_main_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="职位" />

                    <TextView
                        android:id="@+id/tv_my_delive_detail_time"
                        style="@style/text_fu_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1231" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_my_delive_detail_money"
                    style="@style/text_16_yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22222" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_my_delive_detail_company"
                        style="@style/text_fu_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="公司" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_my_delive_detail_status"
                        style="@style/text_bule_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投递" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/main_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_delivery_detail_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/jft_icon_deliveryprogressnotchecked" />

                    <TextView
                        android:textSize="@dimen/ts_11"
                        android:id="@+id/tv_delivery_detail_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="已投递" />

                    <TextView
                        android:textSize="@dimen/ts_11"
                        android:id="@+id/tv_delivery_detail_one_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_delivery_detail_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/jft_icon_deliveryprogressnotchecked" />

                    <TextView
                        android:textSize="@dimen/ts_11"
                        android:id="@+id/tv_delivery_detail_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="被查看" />

                    <TextView
                        android:textSize="@dimen/ts_11"
                        android:id="@+id/tv_delivery_detail_two_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_delivery_detail_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/jft_icon_deliveryprogressnotchecked" />

                    <TextView
                        android:textSize="@dimen/ts_11"
                        android:id="@+id/tv_delivery_detail_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="邀面试" />

                    <TextView
                        android:id="@+id/tv_delivery_detail_three_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textSize="@dimen/ts_11" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_delviery_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View style="@style/line_height_one" />

                <TextView
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:background="@color/white"
                    android:text="面试邀请" />

                <TextView
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/dp_8"
                    android:id="@+id/tv_delviery_detail_time"
                    android:drawableLeft="@mipmap/jft_icon_interviewtime"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:minHeight="@dimen/dp_40" />

                <TextView
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_delviery_detail_address"
                    android:drawableLeft="@mipmap/jft_but_interviewaddress"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:minHeight="@dimen/dp_40" />

                <TextView
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_delviery_detail_phone"
                    android:drawableRight="@mipmap/jft_but_arrow"
                    android:drawableLeft="@mipmap/jft_icon_interviewcontacts"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:minHeight="@dimen/dp_40" />
                 <View
                     android:layout_width="match_parent"
                     android:background="@color/white"
                     android:layout_height="@dimen/dp_16"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>