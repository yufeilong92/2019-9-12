<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:ignore="MissingConstraints">

    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_20">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/dp_40"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginStart="@dimen/dp_10"
                    android:lines="2"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    app:layout_constraintLeft_toRightOf="@id/iv_icon"
                    app:layout_constraintRight_toRightOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/iv_icon" />


                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="描述相符"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintTop_toBottomOf="@id/iv_icon" />

                <com.tsyc.tianshengyoucai.view.StarBar
                    android:id="@+id/sb_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    app:layout_constraintBottom_toBottomOf="@id/tv_desc"
                    app:layout_constraintLeft_toRightOf="@id/tv_desc"
                    app:layout_constraintTop_toTopOf="@id/tv_desc"
                    app:starCount="5"
                    app:starDistance="@dimen/dp_10"
                    app:starEmpty="@mipmap/icon_star_normal"
                    app:starFill="@mipmap/icon_star_selected"
                    app:starSize="@dimen/dp_20" />

                <TextView
                    android:id="@+id/tv_desc_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@color/color_7B8391"
                    android:textSize="@dimen/ts_13"
                    app:layout_constraintBottom_toBottomOf="@id/sb_desc"
                    app:layout_constraintLeft_toRightOf="@id/sb_desc"
                    app:layout_constraintTop_toTopOf="@id/sb_desc" />


                <TextView
                    android:id="@+id/tv_logistic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="描述相符"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintTop_toBottomOf="@id/tv_desc" />

                <com.tsyc.tianshengyoucai.view.StarBar
                    android:id="@+id/sb_logistic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    app:layout_constraintBottom_toBottomOf="@id/tv_logistic"
                    app:layout_constraintLeft_toRightOf="@id/tv_logistic"
                    app:layout_constraintTop_toTopOf="@id/tv_logistic"
                    app:starCount="5"
                    app:starDistance="@dimen/dp_10"
                    app:starEmpty="@mipmap/icon_star_normal"
                    app:starFill="@mipmap/icon_star_selected"
                    app:starSize="@dimen/dp_20" />

                <TextView
                    android:id="@+id/tv_logistic_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@color/color_7B8391"
                    android:textSize="@dimen/ts_13"
                    app:layout_constraintBottom_toBottomOf="@id/sb_logistic"
                    app:layout_constraintLeft_toRightOf="@id/sb_logistic"
                    app:layout_constraintTop_toTopOf="@id/sb_logistic" />


                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="描述相符"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintTop_toBottomOf="@id/sb_logistic" />

                <com.tsyc.tianshengyoucai.view.StarBar
                    android:id="@+id/sb_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    app:layout_constraintBottom_toBottomOf="@id/tv_service"
                    app:layout_constraintLeft_toRightOf="@id/tv_service"
                    app:layout_constraintTop_toTopOf="@id/tv_service"
                    app:starCount="5"
                    app:starDistance="@dimen/dp_10"
                    app:starEmpty="@mipmap/icon_star_normal"
                    app:starFill="@mipmap/icon_star_selected"
                    app:starSize="@dimen/dp_20" />

                <TextView
                    android:id="@+id/tv_service_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@color/color_7B8391"
                    android:textSize="@dimen/ts_13"
                    app:layout_constraintBottom_toBottomOf="@id/sb_service"
                    app:layout_constraintLeft_toRightOf="@id/sb_service"
                    app:layout_constraintTop_toTopOf="@id/sb_service" />


            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_130"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:padding="@dimen/dp_15">

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="start"
                    android:hint="亲，您对这个商品或者商家的服务满意吗？您的评价
会帮助我们选择更好的商品哦~"
                    android:lines="5"
                    android:textColor="@color/color_444A53"
                    android:maxLength="200"
                    android:textColorHint="@color/edit_hint_color"
                    android:textSize="@dimen/ts_14" />


            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tv_text_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="end"
                android:paddingEnd="@dimen/dp_15"
                android:text="0/200"
                android:textColor="@color/color_7B8391"
                android:textSize="@dimen/ts_13" />


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:padding="@dimen/dp_17">

                <TextView
                    android:id="@+id/tv_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传凭证"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />


                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@mipmap/jft_but_modifytheavatar"
                    app:layout_constraintTop_toBottomOf="@id/tv_image" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_img"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    app:layout_constraintLeft_toRightOf="@id/iv_image"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv_image" />

            </android.support.constraint.ConstraintLayout>




            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_margin="@dimen/dp_24">


                <Button
                    android:id="@+id/btn_commit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:background="@drawable/normal_red_btn_bg"
                    android:text="提交申请"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>