<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">

    <include
        android:id="@+id/root_title"

        layout="@layout/toolbar_normal_title" />

    <com.classic.common.MultipleStatusView
        android:id="@+id/multiple_status_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:emptyView="@layout/custom_empty_view"
        app:errorView="@layout/custom_error_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root_title"
        app:loadingView="@layout/custom_loading_view"
        app:noNetworkView="@layout/custom_no_network_view">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scrollbars="none"
                app:layout_constraintBottom_toTopOf="@id/ctl_bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">

                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_375"
                        app:delay_time="3500"
                        app:image_scale_type="center_crop" />


                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/ctl_info"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_134"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/white"
                        android:paddingStart="@dimen/dp_14"
                        android:paddingEnd="@dimen/dp_14"
                        app:layout_constraintTop_toBottomOf="@id/banner">

                        <TextView
                            android:id="@+id/tv_goods_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="2"
                            android:paddingTop="@dimen/dp_5"
                            android:textColor="@color/color_444A53"
                            android:textSize="@dimen/ts_18"
                            android:textStyle="bold"
                            tools:text="@string/app_name" />


                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_12"
                            android:textColor="@color/tab_color"
                            android:textSize="@dimen/ts_17"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@id/tv_goods_name"
                            tools:text="￥ 2019" />

                        <LinearLayout
                            android:id="@+id/ll_charge"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_17"
                            android:layout_marginStart="@dimen/dp_10"
                            android:background="@drawable/shape_charge_rectangle"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@id/tv_price"
                            app:layout_constraintLeft_toRightOf="@id/tv_price"
                            app:layout_constraintTop_toTopOf="@id/tv_price">

                            <TextView
                                android:id="@+id/tv_text_back"
                                android:layout_width="@dimen/dp_15"
                                android:layout_height="@dimen/dp_15"
                                android:layout_marginLeft="@dimen/dp_4"
                                android:background="@drawable/shape_orange_circle"
                                android:gravity="center"
                                android:text="返"
                                android:textColor="@color/white"
                                android:textSize="@dimen/ts_9"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_share_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_3"
                                android:gravity="center"
                                android:textColor="@color/tab_color"
                                android:textSize="@dimen/ts_10"
                                tools:text="￥20" />

                            <TextView
                                android:id="@+id/tv_commission_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_2"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:gravity="center"
                                android:text="@string/charge_back_m"
                                android:textColor="@color/tab_color"
                                android:textSize="@dimen/ts_10" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_share_back"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_14"
                            android:layout_marginStart="@dimen/dp_5"
                            android:paddingStart="@dimen/dp_7"
                            android:paddingEnd="@dimen/dp_7"
                            android:background="@drawable/shape_orange_rectangle"
                            android:gravity="center"
                            android:text="@string/share_back_m"
                            android:textColor="@color/color_orange"
                            android:textSize="@dimen/ts_10"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="@id/tv_price"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_price" />


                        <TextView
                            android:id="@+id/tv_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:textColor="@color/color_7B8391"
                            android:textSize="@dimen/ts_12"
                            app:layout_constraintTop_toBottomOf="@id/tv_price"
                            tools:text="邮费：免邮费" />


                        <TextView
                            android:id="@+id/tv_month_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/edit_hint_color"
                            android:textSize="@dimen/ts_12"
                            app:layout_constraintBottom_toBottomOf="@id/tv_post"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/tv_post"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_post"
                            tools:text="月销 30" />

                        <TextView
                            android:id="@+id/tv_shop_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_7B8391"
                            android:textSize="@dimen/ts_12"
                            app:layout_constraintBottom_toBottomOf="@id/tv_post"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_post"
                            tools:text="河南郑州" />

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/ctl_specs"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/white"
                        android:paddingStart="@dimen/dp_14"
                        android:paddingEnd="@dimen/dp_14"
                        app:layout_constraintTop_toBottomOf="@id/ctl_info">


                        <TextView
                            android:id="@+id/tv_tip_choose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未选"
                            android:textColor="@color/color_50566A"
                            android:textSize="@dimen/ts_16"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_choose_specs"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:hint="@string/p_choose_specs"
                            app:layout_constraintBottom_toBottomOf="@id/tv_tip_choose"
                            app:layout_constraintLeft_toRightOf="@id/tv_tip_choose"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_tip_choose" />

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/ctl_detail_spec"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/white"
                        android:paddingStart="@dimen/dp_14"
                        android:paddingEnd="@dimen/dp_14"
                        app:layout_constraintTop_toBottomOf="@id/ctl_specs">

                        <TextView
                            android:id="@+id/tv_spec"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="参数"
                            android:textColor="@color/color_50566A"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:paddingStart="@dimen/dp_10"
                            android:text="请查看商品详细参数"
                            android:gravity="center_vertical"
                            android:textColor="@color/color_7B8391"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/tv_spec" />

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/ctl_evaluate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/ctl_detail_spec">

                        <TextView
                            android:id="@+id/tv_shop_evaluate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_15"
                            android:text="@string/shop_evaluate"
                            android:textColor="@color/color_50566A"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_evaluate_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@mipmap/jft_but_shop_generalarrowred"
                            android:drawablePadding="@dimen/dp_8"
                            android:padding="@dimen/dp_15"
                            android:text="@string/evaluate_more"
                            android:textColor="@color/tab_color"
                            android:textSize="@dimen/ts_13"
                            app:layout_constraintBottom_toBottomOf="@id/tv_shop_evaluate"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_shop_evaluate" />

                        <RelativeLayout
                            android:id="@+id/good_evaluate_root"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@id/tv_shop_evaluate">

                            <include
                                layout="@layout/goods_evaluate_item"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                    </android.support.constraint.ConstraintLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_15"
                        app:layout_constraintTop_toBottomOf="@id/ctl_evaluate"
                        tools:ignore="WebViewLayout">

                        <TextView
                            android:id="@+id/tv_good_detail_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/shape_line_bg"
                            android:drawablePadding="@dimen/dp_5"
                            android:text="@string/shop_detaile"
                            android:textColor="@color/color_50566A"
                            android:textSize="@dimen/ts_16" />

                        <TextView
                            android:id="@+id/tv_webview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_good_detail_title" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_detail_image"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_weight="1"
                            app:layout_constraintTop_toBottomOf="@id/tv_webview" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_59"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_9"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_9"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="MissingConstraints,RtlSymmetry">


                <TextView
                    android:id="@+id/tv_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/jft_but_shop_personalstores"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="@string/text_shop"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/jft_but_commoditysharing"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="@string/text_share"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_shop" />

                <TextView
                    android:id="@+id/tv_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/jft_but_collectionofcommodities"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="@string/text_collect"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_share"
                    app:layout_constraintTop_toTopOf="parent" />


                <Button
                    android:id="@+id/btn_buy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_29"
                    android:background="@drawable/shape_red_rectangle"
                    android:text="@string/text_buy"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_15"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_collect"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>
    </com.classic.common.MultipleStatusView>
</android.support.constraint.ConstraintLayout>
