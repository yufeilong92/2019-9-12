<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.recruit.JobDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dp_48">
        <ImageView
            android:id="@+id/gm_iv_back"
            android:layout_width="@dimen/dp_48"
            android:src="@mipmap/jft_but_back"
            android:padding="@dimen/dp_14"
            android:onClick="onfinish"
            android:layout_height="@dimen/dp_48"
            tools:ignore="OnClick" />
        <TextView
            android:id="@+id/gm_tv_title"
            android:textSize="@dimen/ts_18"
            android:textColor="@color/color_444A53"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:scaleType="center"
            android:id="@+id/gm_iv_right_collect"
            android:gravity="bottom"
            android:src="@mipmap/jft_icon_tracingstars"
            android:layout_width="@dimen/dp_48"
            android:layout_toLeftOf="@id/gm_iv_right_share"
            android:layout_height="@dimen/dp_48" />
        <ImageView
            android:scaleType="center"
            android:id="@+id/gm_iv_right_share"
            android:gravity="bottom"
            android:src="@mipmap/jft_but_sharingshop"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/srl_root"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:background="@drawable/bg_boss_edit_gray"
                android:orientation="vertical"
                android:padding="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_job_detail_work_title"
                        style="@style/text_main_17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="餐厅服务员"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_job_detail_work_tag"
                        style="@style/text_bule_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/bg_qian_bule"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_2"
                        android:text="兼职" />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_10"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_job_detail_status"
                        style="@style/text_bule_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/gm_4_bule_radio_line"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_4"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_4"
                        android:text="招聘" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_job_detail_tag"
                    style="@style/text_fu_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#经验不限" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_job_detail_money"
                        style="@style/text_14_yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="150元/" />

                    <TextView
                        android:id="@+id/tv_job_detail_time"
                        style="@style/text_fu_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5月22日" />
                </LinearLayout>

                <View
                    style="@style/line_height_one"
                    android:layout_marginTop="@dimen/dp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_job_detail_city"
                            style="@style/text_main_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/jft_icon_companyaddress"
                            android:drawablePadding="@dimen/dp_10"
                            android:text="" />

                        <TextView
                            android:id="@+id/tv_job_detail_address"
                            style="@style/text_fu_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/jft_but_arrow" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center_vertical">

                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_16"
                    android:background="@color/bule" />

                <TextView
                    style="@style/text_main_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text="职位亮点" />
            </LinearLayout>

            <com.tsyc.tianshengyoucai.view.FlowLayout
                android:id="@+id/fl_job_detail_company_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_16" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical">

                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_16"
                    android:background="@color/bule" />

                <TextView
                    style="@style/text_main_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text="职位描述" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_job_detail_company_desc"
                style="@style/text_fu_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:text="" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center_vertical">

                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_16"
                    android:background="@color/bule" />

                <TextView
                    style="@style/text_main_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text="公司信息" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_company_infom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_16"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_job_detail_company_logo"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:src="@mipmap/ic_default_picture" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_job_detail_company_name"
                        style="@style/text_main_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="郑州星选海底捞小火锅" />

                    <TextView
                        android:id="@+id/tv_job_detail_company_tag"
                        style="@style/text_fu_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="郑州星选海底捞小火锅" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/jft_but_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/main_color" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_main_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="如遇无效、虚假、诈骗信息，请立即举报" />

                    <TextView
                        style="@style/text_fu_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="求职过程请勿缴纳费用或押金，谨防诈骗。" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_job_detail_inform"
                    style="@style/text_bule_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/jft_but_reportingpositions"
                    android:text="举报" />

            </LinearLayout>

            <LinearLayout

                android:background="@color/main_color"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal">

                <View
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/edit_hint_color" />

                <TextView
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_gravity="center_vertical"
                    style="@style/text_main_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="相似职位推荐" />

                <View
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/edit_hint_color" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_job_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_16">

                    <Button
                        android:id="@+id/btn_job_detail_go"
                        style="@style/text_bule_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/bg_qian_bule"
                        android:text="立即沟通" />

                    <Button
                        android:id="@+id/btn_job_detail_send"
                        style="@style/text_15_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_weight="0.7"
                        android:background="@drawable/gm_4_bule_bg_circle"
                        android:text="投递简历" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>