<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    tools:context=".ui.recruit.JobInfomActivity">

    <include layout="@layout/gm_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <TextView
                android:layout_marginTop="@dimen/dp_20"
                style="@style/text_main_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="填写基本信息" />

            <TextView
                style="@style/text_fu_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_8"
                android:text="简单介绍一下自己吧" />

            <LinearLayout
                android:id="@+id/ll_job_infom_hear"
                android:layout_width="wrap_content"
                android:padding="@dimen/dp_5"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_job_infom_hear"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/jft_but_bosses_personalinformationavatars" />

                <TextView

                    style="@style/text_fu_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="上传头像" />

                <TextView
                    style="@style/text_fu_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="简历查看率增加20%" />
            </LinearLayout>

            <TextView
                style="@style/text_main_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="姓名" />

            <EditText
                android:id="@+id/et_job_infom_name"
                style="@style/text_main_15"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/transparent"
                android:hint="请填写真实姓名" />

            <View style="@style/line_height_one" />

            <TextView
                style="@style/text_main_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="性别" />

            <TextView
                android:id="@+id/tv_job_infom_sex"
                style="@style/text_main_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/transparent"
                android:drawableRight="@mipmap/jft_but_arrow"
                android:gravity="center_vertical"
                android:hint="请选择性别" />

            <View style="@style/line_height_one" />

            <TextView
                style="@style/text_main_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="出生年月" />

            <TextView
                android:id="@+id/tv_job_infom_birthday"
                style="@style/text_main_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/jft_but_arrow"
                android:hint="请选择出生年月" />

            <View style="@style/line_height_one" />

            <TextView
                style="@style/text_main_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="参加工作时间" />

            <TextView
                android:id="@+id/tv_job_infom_time"
                style="@style/text_main_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/jft_but_arrow"
                android:hint="请选择参加工作时间" />

            <View style="@style/line_height_one" />

            <TextView
                style="@style/text_main_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="现居住城市" />

            <TextView
                android:id="@+id/tv_job_infom_city"
                style="@style/text_main_15"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/transparent"
                android:drawableRight="@mipmap/jft_but_arrow"
                android:hint="请选择现在居住的城市" />

            <View style="@style/line_height_one" />

            <TextView
                style="@style/text_main_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="手机号码" />

            <TextView
                android:id="@+id/tv_job_infom_phone"
                style="@style/text_main_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:imeOptions="actionNext"
                android:drawableRight="@mipmap/jft_but_arrow"
                android:background="@color/transparent"
                android:hint="请绑定手机号码" />

            <View style="@style/line_height_one" />

            <TextView
                style="@style/text_main_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="电子邮箱" />

            <EditText
                android:id="@+id/et_job_infom_email"
                style="@style/text_main_15"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:imeOptions="actionDone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:drawableRight="@mipmap/jft_but_arrow"
                android:background="@color/transparent"
                android:hint="请输入电子邮箱" />

            <View style="@style/line_height_one" />

            <Button
                android:id="@+id/btn_job_infom_next"
                style="@style/text_fu_14"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/gm_4_gray_bg_circle"
                android:text="下一步" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>