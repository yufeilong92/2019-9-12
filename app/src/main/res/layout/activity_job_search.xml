<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.recruit.JobSearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_job_search_address"
            style="@style/text_main_13"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_10"
            android:text="位置" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/jft_but_inferiortriangle" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="1"
            android:background="@drawable/gm_search_gray_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_job_sh_sh"
                android:layout_width="@dimen/dp_48"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@mipmap/jft_icon_clicksearch" />

            <EditText
                android:id="@+id/et_job_sh_input"
                style="@style/text_main_13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="搜索职位或公司"
                android:imeOptions="actionSearch"
                android:paddingRight="@dimen/dp_10"
                android:singleLine="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_job_search_canner"
            style="@style/text_main_13"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_16"
            android:text="取消" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                style="@style/text_main_14"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择搜索职位的分类" />

            <RadioGroup
                android:id="@+id/rg_job_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_job_search_work"
                    style="@style/text_main_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="职位" />

                <RadioButton
                    android:id="@+id/rb_job_search_company"
                    style="@style/text_main_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="公司" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_main_13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="历史搜索" />

                <ImageView
                    android:id="@+id/iv_job_search_delete"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_35"
                    android:scaleType="center"
                    android:src="@mipmap/jft_but_clearhistoricalrecords" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_history_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#F8F8F8" />

            <TextView
                style="@style/text_main_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:text="热门搜素" />

            <com.tsyc.tianshengyoucai.view.FlowLayout
                android:id="@+id/fl_job_search_hont_jobs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>