<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/ctl_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_220"
                android:background="@mipmap/jft_img_loginregistrationbackground"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="@dimen/dp_68"
                    android:layout_height="@dimen/dp_68"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/logo" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_Phone"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_45"
                android:src="@mipmap/jft_icon_smallcellphone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_top" />

            <EditText
                android:id="@+id/et_Account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/color_transparent"
                android:hint="@string/login_phone_hint"
                android:inputType="number"
                android:text=""
                android:maxLength="11"
                android:textSize="@dimen/ts_15"
                app:layout_constraintBottom_toBottomOf="@id/iv_Phone"
                app:layout_constraintLeft_toRightOf="@id/iv_Phone"
                app:layout_constraintRight_toLeftOf="@id/iv_Clear_Phone"
                app:layout_constraintTop_toTopOf="@id/iv_Phone" />

            <ImageView
                android:id="@+id/iv_Clear_Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_45"
                android:layout_marginRight="@dimen/dp_45"
                android:src="@mipmap/jft_but_close"
                app:layout_constraintBottom_toBottomOf="@id/iv_Phone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_Phone" />

            <View
                android:id="@+id/split_view1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@color/color_split_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_Phone" />


            <!--登录的布局-->
            <ImageView
                android:id="@+id/iv_Password"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_30"
                android:src="@mipmap/jft_icon_password"
                app:layout_constraintLeft_toLeftOf="@id/bt_Login"
                app:layout_constraintTop_toBottomOf="@id/split_view1" />

            <EditText
                android:id="@+id/et_Password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/color_transparent"
                android:hint="@string/login_password_hint"
                android:inputType="textPassword"
                android:textSize="@dimen/ts_15"
                android:text=""
                app:layout_constraintBottom_toBottomOf="@id/iv_Password"
                app:layout_constraintLeft_toRightOf="@id/iv_Password"
                app:layout_constraintRight_toLeftOf="@id/iv_Clear_Phone"
                app:layout_constraintTop_toTopOf="@id/iv_Password" />

            <ImageView
                android:id="@+id/iv_ShowOrHidden_Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/jft_but_closeeyes"
                app:layout_constraintBottom_toBottomOf="@id/iv_Password"
                app:layout_constraintRight_toRightOf="@id/bt_Login"
                app:layout_constraintTop_toTopOf="@id/iv_Password" />

            <View
                android:id="@+id/split_view2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@color/color_split_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_Password" />


            <TextView
                android:id="@+id/tv_no_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/login_no_account_tip"
                android:textSize="@dimen/ts_14"
                app:layout_constraintLeft_toLeftOf="@id/split_view2"
                app:layout_constraintTop_toBottomOf="@id/split_view2" />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/login_register_tip"
                android:textColor="@color/normal_btn_line_color"
                android:textSize="@dimen/ts_14"
                app:layout_constraintLeft_toRightOf="@id/tv_no_count"
                app:layout_constraintTop_toBottomOf="@id/split_view2" />

            <TextView
                android:id="@+id/tv_Forget_Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/forget_password"
                android:textColor="@color/normal_btn_line_color"
                android:textSize="@dimen/ts_14"
                app:layout_constraintRight_toRightOf="@id/split_view2"
                app:layout_constraintTop_toBottomOf="@id/split_view2" />

            <Button
                android:id="@+id/bt_Login"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_47"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginEnd="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_25"
                android:background="@drawable/normal_btn_bg"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_17"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_Forget_Password" />


            <!-- <Button
                 android:id="@+id/btn_wx_login"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/dp_50"
                 android:layout_marginLeft="@dimen/dp_25"
                 android:layout_marginTop="@dimen/dp_50"
                 android:layout_marginEnd="@dimen/dp_25"
                 android:layout_marginRight="@dimen/dp_25"
                 android:background="@drawable/white_btn_bg"
                 android:text="@string/wx_login"
                 android:drawableLeft="@mipmap/jft_img_wechat"
                 android:layout_gravity="center_horizontal"
                 android:drawableStart="@mipmap/jft_img_wechat"
                 android:textColor="@color/normal_text_color"
                 android:textSize="@dimen/ts_17"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintTop_toBottomOf="@id/bt_Login" />-->

            <LinearLayout
                android:id="@+id/ll_wx_login"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_47"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_25"
                android:background="@drawable/white_btn_bg"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bt_Login">

                <ImageView
                    android:layout_width="@dimen/dp_21"
                    android:layout_height="@dimen/dp_17"
                    android:background="@mipmap/jft_img_wechat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:text="@string/wx_login"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/ts_17" />

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</RelativeLayout>