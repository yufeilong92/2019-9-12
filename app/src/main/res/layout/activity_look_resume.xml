<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.recruit.LookResumeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/jft_img_previewresumebackground" />
            <LinearLayout
                android:id="@+id/ll_look_rc_infom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_look_rc_hear"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_default_picture" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_look_rc_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="姓名"
                            android:textColor="@color/color_444A53"
                            android:textSize="@dimen/ts_19"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/text_fu_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/" />

                        <TextView
                            android:id="@+id/tv_look_rc_sex"
                            style="@style/text_fu_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="先生" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_look_rc_work"
                            style="@style/text_main_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="前台收银" />

                        <View
                            style="@style/line_with_one"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_2" />

                        <TextView
                            android:id="@+id/tv_look_rc_time"
                            style="@style/text_main_13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="工作两年" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_look_rc_age"
                            style="@style/text_fu_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23岁" />

                        <View
                            style="@style/line_with_one"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10" />

                        <TextView
                            android:id="@+id/tv_look_rc_edu"
                            style="@style/text_fu_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="大专" />

                        <View
                            style="@style/line_with_one"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10" />

                        <TextView
                            android:id="@+id/tv_look_rc_address"
                            style="@style/text_fu_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="郑州" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_look_rc_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:drawableLeft="@mipmap/jft_icon_resumecellphone"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="18017837561" />

            <TextView
                android:id="@+id/tv_look_rc_emali"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:drawableLeft="@mipmap/jft_icon_resumemini_mailbox"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="18017837561" />

            <TextView
                style="@style/text_main_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:text="求职状态"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_look_rc_work_status"
                style="@style/text_main_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_16"
                android:gravity="center_vertical"
                android:text="随时到岗" />

            <TextView
                style="@style/text_main_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_weight="1"
                android:text="求职意向"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8">

                <TextView
                    android:id="@+id/tv_look_rc_work_purpose"
                    style="@style/text_main_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="前台收银 4k-6k" />

                <TextView
                    android:id="@+id/tv_look_rc_work_content_purpose"
                    style="@style/text_fu_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="郑州-金水区/电子商务、游戏、媒体/全职" />
            </LinearLayout>

            <TextView
                style="@style/text_main_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_weight="1"
                android:text="工作/实习经历"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_look_rc_undergo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:descendantFocusability="blocksDescendants">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rlv_look_rc_work_undergo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>


            <TextView
                style="@style/text_main_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_weight="1"
                android:text="教育经历"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_look_rc_edu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:descendantFocusability="blocksDescendants">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rlv_look_rc_work_edu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>


            <TextView
                style="@style/text_main_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:text="自我评价"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_look_rc_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_30"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_look_rc_mine_evaluate"
                    style="@style/text_main_13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="负责APP，网页工作内容，网页工作内容网页工作内容负责APP，网页工作内
工作认真。" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>