<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:ignore="MissingConstraints,RtlSymmetry">

    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"

        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_237"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_30"
                    android:paddingTop="@dimen/dp_20"
                    android:text="@string/my_shop"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_26" />

                <TextView
                    android:id="@+id/tv_shop_set"
                    android:layout_width="@dimen/dp_78"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:background="@drawable/shape_gray_rectangle"
                    android:gravity="center"
                    android:text="@string/text_shop_set"
                    android:textColor="@color/color_444A53"
                    app:layout_constraintBottom_toBottomOf="@id/tv_shop"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_shop" />


                <android.support.constraint.ConstraintLayout
                    android:layout_width="@dimen/dp_334"
                    android:layout_height="@dimen/dp_137"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@mipmap/jft_img_mystoreaccountbalance"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_set">


                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_25"
                        android:paddingTop="@dimen/dp_40"
                        android:text="@string/text_total"
                        android:textColor="@color/color_A97A3C"
                        android:textSize="@dimen/ts_13" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_25"
                        android:text="@string/text_init_num"
                        android:textColor="@color/color_323232"
                        android:textSize="39sp"
                        app:layout_constraintLeft_toLeftOf="@id/tv_total"
                        app:layout_constraintTop_toBottomOf="@id/tv_total" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_6"
                        android:text="å…ƒ"
                        android:textColor="@color/color_323232"
                        android:textSize="@dimen/ts_15"
                        app:layout_constraintBottom_toBottomOf="@id/tv_money"
                        app:layout_constraintLeft_toRightOf="@id/tv_money" />


                    <LinearLayout
                        android:id="@+id/ll_go_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:background="@mipmap/jft_but_smallbutton"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dp_7"
                        app:layout_constraintBottom_toBottomOf="@id/tv_money"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_money">

                        <TextView
                            android:id="@+id/tv_go_cash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_go_cash"
                            android:textColor="@color/color_FF781E"
                            android:textSize="@dimen/ts_13" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:background="@mipmap/jft_but_arrowyellow" />

                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_tool"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_139"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/shape_white_rectangle"
                app:layout_constraintTop_toBottomOf="@id/ctl_top">


                <TextView
                    android:id="@+id/tv_tool"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_46"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_17"
                    android:text="@string/text_tools"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/dp_17"
                    android:layout_marginEnd="@dimen/dp_17"
                    android:background="@color/color_E7EEF7"
                    app:layout_constraintTop_toBottomOf="@id/tv_tool" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_category"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_103"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_tool" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_set"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/shape_white_rectangle"
                android:paddingStart="@dimen/dp_13"
                android:paddingEnd="@dimen/dp_13"
                app:layout_constraintTop_toBottomOf="@id/ctl_tool">


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/ctl_evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/line3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_evalute_manager"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_15"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/jft_but_singlearrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/ctl_detail"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line3"
                    app:layout_constraintVertical_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_money_detail"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_15"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/jft_but_singlearrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/shape_white_rectangle"
                android:paddingEnd="@dimen/dp_13"
                android:paddingStart="@dimen/dp_13"
                app:layout_constraintTop_toBottomOf="@id/ctl_center">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/ctl_scan"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/line4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_scan"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_15"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/jft_but_singlearrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/ctl_under_order"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line4"
                    app:layout_constraintVertical_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_shop_underline_order"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_15"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/jft_but_singlearrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>