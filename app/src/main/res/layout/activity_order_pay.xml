<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:ignore="MissingConstraints">

    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ctl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_163"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/root_title">

        <TextView
            android:id="@+id/tv_total_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_30"
            android:textColor="@color/tab_color"
            android:textSize="@dimen/ts_28"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="@color/color_444A53"
            android:textSize="@dimen/ts_15"
            app:layout_constraintLeft_toLeftOf="@id/tv_total_pay"
            app:layout_constraintRight_toRightOf="@id/tv_total_pay"
            app:layout_constraintTop_toBottomOf="@id/tv_total_pay" />
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/ctl_pay_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_222"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/ctl_top">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/ctl_wx_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_74">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_74"
                android:drawableStart="@mipmap/jft_icon_wechatpay"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_20"
                android:text="@string/text_wx_pay"
                android:textColor="@color/color_444A53"
                android:textSize="@dimen/ts_15" />


            <CheckBox
                android:id="@+id/cb_wx_pay"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@drawable/gender_selector"
                android:button="@null"
                android:clickable="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_E9EFF7"
                app:layout_constraintBottom_toBottomOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/ctl_ali_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_74"
            app:layout_constraintTop_toBottomOf="@id/ctl_wx_pay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_74"
                android:drawableStart="@mipmap/jft_icon_alipaypay"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_20"
                android:text="@string/text_ali_pay"
                android:textColor="@color/color_444A53"
                android:textSize="@dimen/ts_15" />


            <CheckBox
                android:id="@+id/cb_ali_pay"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@drawable/gender_selector"
                android:button="@null"
                android:clickable="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_E9EFF7"
                app:layout_constraintBottom_toBottomOf="parent" />

        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/ctl_account_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_74"
            app:layout_constraintTop_toBottomOf="@id/ctl_ali_pay">

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_74"
                android:drawableStart="@mipmap/jft_icon_balancepayment"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_20"
                android:clickable="false"
                android:text="@string/text_account_pay"
                android:textColor="@color/color_444A53"
                android:textSize="@dimen/ts_15" />

            <TextView
                android:id="@+id/tv_account_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="@string/text_account_cur_money"
                app:layout_constraintLeft_toRightOf="@id/tv_account"
                app:layout_constraintRight_toLeftOf="@id/cb_account_pay" />

            <CheckBox
                android:id="@+id/cb_account_pay"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@drawable/gender_selector"
                android:button="@null"
                android:clickable="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_E9EFF7"
                app:layout_constraintBottom_toBottomOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>


    <Button
        android:id="@+id/btn_commit"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_17"
        android:background="@drawable/normal_red_btn_bg"
        android:layout_margin="@dimen/dp_30"
        android:text="确认支付"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47" />
</android.support.constraint.ConstraintLayout>