<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">

    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_261"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/root_title">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/jft_img_successfulpayment" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="支付成功"
            android:textColor="@color/color_444A53"
            android:textSize="@dimen/ts_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您已经完成支付"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/color_7B8391"
            android:textSize="@dimen/ts_14" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>