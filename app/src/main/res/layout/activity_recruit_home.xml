<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.recruit.RecruitHomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:button="@null"
            android:text="职位"
            android:background="@color/transparent"
            android:id="@+id/rb_rc_jobs"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            android:drawableTop="@drawable/select_rc_job"
            android:gravity="center"
            android:textColor="@drawable/select_trade_tag_color"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RadioButton
            android:button="@null"
            android:id="@+id/rb_rc_msg"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            android:drawableTop="@drawable/select_rc_msg"
            android:gravity="center"
            android:text="消息"
            android:textColor="@drawable/select_trade_tag_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/rb_rc_mine"
            android:button="@null"
            android:background="@color/transparent"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            android:drawableTop="@drawable/select_rc_mine"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/select_trade_tag_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RadioGroup>

</LinearLayout>