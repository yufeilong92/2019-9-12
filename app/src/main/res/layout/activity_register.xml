<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:overScrollMode="never">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="@dimen/dp_30">


            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_225"
                android:background="@mipmap/jft_img_loginregistrationbackground"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_icon"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="@dimen/dp_19"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_20" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_Phone"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_45"
                android:src="@mipmap/jft_icon_smallcellphone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_top" />

            <EditText
                android:id="@+id/et_Account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@color/color_transparent"
                android:hint="@string/login_phone_hint"
                android:inputType="number"
                android:maxLength="11"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/ts_15"
                app:layout_constraintBottom_toBottomOf="@id/iv_Phone"
                app:layout_constraintLeft_toRightOf="@id/iv_Phone"
                app:layout_constraintRight_toLeftOf="@id/iv_Clear_Phone"
                app:layout_constraintTop_toTopOf="@id/iv_Phone" />

            <ImageView
                android:id="@+id/iv_Clear_Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_45"
                android:src="@mipmap/jft_but_close"
                app:layout_constraintBottom_toBottomOf="@id/iv_Phone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_Phone" />

            <View
                android:id="@+id/split_view1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@color/color_split_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_Phone" />

            <!--注册的布局 -->
            <ImageView
                android:id="@+id/iv_VerificationCode"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_12"
                android:src="@mipmap/jft_icon_verificationcode"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/split_view3"
                app:layout_constraintLeft_toLeftOf="@id/iv_Phone" />

            <EditText
                android:id="@+id/et_VerificationCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@color/color_transparent"
                android:hint="@string/input_verification_code_hint"
                android:inputType="number"
                android:maxLength="11"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/ts_15"
                app:layout_constraintBottom_toBottomOf="@id/iv_VerificationCode"
                app:layout_constraintLeft_toLeftOf="@id/et_Account"
                app:layout_constraintTop_toTopOf="@id/iv_VerificationCode" />

            <View
                android:id="@+id/split_view4"
                android:layout_width="1dp"
                android:layout_height="@dimen/dp_35"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@color/color_split_line"
                app:layout_constraintBottom_toBottomOf="@id/tv_Send_Code"
                app:layout_constraintRight_toLeftOf="@+id/tv_Send_Code"
                app:layout_constraintTop_toTopOf="@id/tv_Send_Code" />

            <TextView
                android:id="@+id/tv_Send_Code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/get_verification_code"
                android:textColor="@color/normal_text_color"
                app:layout_constraintBottom_toBottomOf="@id/split_view3"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:id="@+id/split_view3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@color/color_split_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/split_view1" />

            <ImageView
                android:id="@+id/iv_Password2"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:src="@mipmap/jft_icon_password"
                app:layout_constraintLeft_toLeftOf="@id/iv_VerificationCode"
                app:layout_constraintTop_toBottomOf="@id/split_view3" />

            <EditText
                android:id="@+id/et_Password2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/color_transparent"
                android:hint="@string/login_password_hint"
                android:inputType="textPassword"
                android:lines="1"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/ts_15"
                app:layout_constraintBottom_toBottomOf="@id/iv_Password2"
                app:layout_constraintLeft_toLeftOf="@id/et_VerificationCode"
                app:layout_constraintRight_toRightOf="@id/tv_Send_Code"
                app:layout_constraintTop_toTopOf="@id/iv_Password2" />


            <View
                android:id="@+id/split_view5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@color/color_split_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/split_view3" />

            <ImageView
                android:id="@+id/iv_Invitation_Code"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:src="@mipmap/jft_icon_invitationcode"
                app:layout_constraintLeft_toLeftOf="@id/iv_VerificationCode"
                app:layout_constraintTop_toBottomOf="@id/split_view5" />

            <EditText
                android:id="@+id/et_Invitation_Code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/color_transparent"
                android:hint="@string/invitation_code_hint"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLength="6"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/ts_15"
                app:layout_constraintBottom_toBottomOf="@id/iv_Invitation_Code"
                app:layout_constraintLeft_toLeftOf="@id/et_VerificationCode"
                app:layout_constraintRight_toRightOf="@id/tv_Send_Code"
                app:layout_constraintTop_toTopOf="@id/iv_Invitation_Code" />


            <View
                android:id="@+id/split_view6"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@color/color_split_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/split_view5" />


            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="@dimen/ts_15"
                android:textColor="@color/edit_hint_color"
                android:layout_marginBottom="@dimen/dp_10"
                app:layout_constraintBottom_toTopOf="@id/split_view7"
                app:layout_constraintLeft_toLeftOf="@id/iv_VerificationCode" />


            <CheckBox
                android:id="@+id/cb_man"
                app:layout_constraintLeft_toRightOf="@id/tv_sex"
                app:layout_constraintTop_toTopOf="@id/tv_sex"
                app:layout_constraintBottom_toBottomOf="@id/tv_sex"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="@dimen/dp_8"
                android:drawableLeft="@drawable/gender_selector"
                android:text="@string/text_man"
                android:layout_height="wrap_content" />



            <CheckBox
                android:id="@+id/cb_woman"
                app:layout_constraintLeft_toRightOf="@id/cb_man"
                app:layout_constraintTop_toTopOf="@id/cb_man"
                app:layout_constraintBottom_toBottomOf="@id/cb_man"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:button="@null"
                android:drawablePadding="@dimen/dp_8"
                android:drawableLeft="@drawable/gender_selector"
                android:text="@string/text_women"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/split_view7"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@color/color_split_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/split_view6" />


            <CheckBox
                android:id="@+id/cb_Select_Agreement"
                style="@style/register_cb_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:checked="true"
                android:paddingStart="@dimen/dp_5"
                android:text="@string/read_and_agree_hint"
                android:textSize="@dimen/ts_12"
                app:layout_constraintLeft_toLeftOf="@id/split_view7"
                app:layout_constraintTop_toBottomOf="@id/split_view7" />

            <TextView
                android:id="@+id/tv_Read_Agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/read_and_agree_hint2"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/ts_12"
                app:layout_constraintBottom_toBottomOf="@id/cb_Select_Agreement"
                app:layout_constraintLeft_toRightOf="@id/cb_Select_Agreement"
                app:layout_constraintTop_toTopOf="@id/cb_Select_Agreement" />

            <Button
                android:id="@+id/bt_Register"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_25"
                android:background="@drawable/normal_btn_bg"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_17"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cb_Select_Agreement" />

            <View
                android:layout_width="@dimen/dp_65"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_27"
                android:background="@color/color_split_line"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_company_name"
                app:layout_constraintTop_toTopOf="@id/tv_company_name" />

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_27"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:layout_width="@dimen/dp_65"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_27"
                android:background="@color/color_split_line"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_company_name"
                app:layout_constraintTop_toTopOf="@id/tv_company_name" />
        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</RelativeLayout>