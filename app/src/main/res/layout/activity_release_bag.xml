<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:ignore="MissingConstraints">


    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintTop_toBottomOf="@id/root_title">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_205"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_old"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_51"
                    android:gravity="center"
                    android:text="@string/text_bag_total_count"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/ts_14" />

                <EditText
                    android:id="@+id/et_total_count"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_51"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@null"
                    android:inputType="number"
                    android:hint="@string/hint_bag_total_count"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintLeft_toRightOf="@id/tv_old"
                    app:layout_constraintRight_toRightOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/color_E9EFF7"

                    app:layout_constraintTop_toBottomOf="@id/tv_old" />


                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_51"
                    android:gravity="center"
                    android:text="@string/text_single_bag_count"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintTop_toBottomOf="@id/tv_old" />

                <EditText
                    android:id="@+id/et_single_count"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_51"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@null"
                    android:hint="@string/hint_single_bag_count"
                    android:inputType="numberDecimal"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintLeft_toRightOf="@id/tv_price"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_price" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintTop_toBottomOf="@id/tv_price" />

                <TextView
                    android:id="@+id/tv_shop_take"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_51"
                    android:gravity="center"
                    android:text="@string/text_near_people"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintTop_toBottomOf="@id/tv_price" />

                <CheckBox
                    android:id="@+id/cb_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/to_shop_take_selector"
                    android:button="@null"
                    android:checked="true"
                    app:layout_constraintBottom_toBottomOf="@id/tv_shop_take"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_shop_take" />


                <TextView
                    android:id="@+id/tv_choose_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_51"
                    android:gravity="center"
                    android:text="@string/text_choose_rec_bag_gender"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_take" />


                <CheckBox
                    android:id="@+id/cb_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:button="@null"
                    android:checked="true"
                    android:drawableStart="@drawable/gender_selector"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="@string/text_man"
                    app:layout_constraintBottom_toBottomOf="@id/tv_choose_gender"
                    app:layout_constraintLeft_toRightOf="@id/tv_choose_gender"
                    app:layout_constraintTop_toTopOf="@id/tv_choose_gender" />

                <CheckBox
                    android:id="@+id/cb_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:button="@null"
                    android:drawableStart="@drawable/gender_selector"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="@string/text_women"
                    app:layout_constraintBottom_toBottomOf="@id/tv_choose_gender"
                    app:layout_constraintLeft_toRightOf="@id/cb_man"
                    app:layout_constraintTop_toTopOf="@id/tv_choose_gender" />


            </android.support.constraint.ConstraintLayout>


            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_35"
                android:textColor="@color/color_444A53"
                android:textSize="@dimen/ts_32"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ctl_top"
                tools:text="ï¿¥0.00" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_45"
                android:paddingStart="@dimen/dp_20"
                android:text="@string/text_choose_pay_type"
                android:textColor="@color/black_33"
                android:textSize="@dimen/ts_19"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_money" />


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_pay_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_222"
                android:layout_marginTop="@dimen/dp_80"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tv_money">


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/ctl_wx_pay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_74">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_74"
                        android:drawableStart="@mipmap/jft_icon_wechatpay"
                        android:drawablePadding="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_20"
                        android:text="@string/text_wx_pay"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_15" />


                    <CheckBox
                        android:id="@+id/cb_wx_pay"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:background="@drawable/gender_selector"
                        android:button="@null"
                        android:clickable="false"
                        android:checked="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/color_E9EFF7"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/ctl_ali_pay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_74"
                    app:layout_constraintTop_toBottomOf="@id/ctl_wx_pay">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_74"
                        android:drawableStart="@mipmap/jft_icon_alipaypay"
                        android:drawablePadding="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_20"
                        android:text="@string/text_ali_pay"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_15" />


                    <CheckBox
                        android:id="@+id/cb_ali_pay"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:background="@drawable/gender_selector"
                        android:button="@null"
                        android:clickable="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/color_E9EFF7"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </android.support.constraint.ConstraintLayout>


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/ctl_account_pay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_74"
                    app:layout_constraintTop_toBottomOf="@id/ctl_ali_pay">

                    <TextView
                        android:id="@+id/tv_account"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_74"
                        android:drawableStart="@mipmap/jft_icon_balancepayment"
                        android:drawablePadding="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_20"
                        android:text="@string/text_account_pay"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_15" />

                    <TextView
                        android:id="@+id/tv_account_money"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="@string/text_account_cur_money"
                        app:layout_constraintLeft_toRightOf="@id/tv_account"
                        app:layout_constraintRight_toLeftOf="@id/cb_account_pay" />

                    <CheckBox
                        android:id="@+id/cb_account_pay"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:background="@drawable/gender_selector"
                        android:button="@null"
                        android:clickable="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/color_E9EFF7"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_121"
                android:paddingTop="@dimen/dp_30"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ctl_pay_type">


                <Button
                    android:id="@+id/btn_commit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:layout_margin="@dimen/dp_23"
                    android:background="@drawable/normal_red_btn_bg"
                    android:text="@string/text_config_pay"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_17" />

            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>