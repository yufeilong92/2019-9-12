<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:ignore="MissingConstraints">

    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root_title">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_103"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_old"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_51"
                    android:gravity="center"
                    android:text="@string/text_coupon_size"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/ts_14" />

                <EditText
                    android:id="@+id/et_coupon_money"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_51"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@null"
                    android:hint="@string/hint_coupon_size"
                    android:inputType="numberDecimal"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintLeft_toRightOf="@id/tv_old"
                    app:layout_constraintRight_toRightOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintTop_toBottomOf="@id/tv_old" />


                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_51"
                    android:gravity="center"
                    android:text="@string/text_coupon_use"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintTop_toBottomOf="@id/tv_old" />

                <EditText
                    android:id="@+id/et_coupon_size"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_51"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@null"
                    android:hint="@string/hint_coupon_use"
                    android:inputType="numberDecimal"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintLeft_toRightOf="@id/tv_price"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_price" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintTop_toBottomOf="@id/tv_price" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_103"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                app:layout_constraintTop_toBottomOf="@id/ctl_top">

                <TextView
                    android:id="@+id/tv_lib_count"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_51"
                    android:gravity="center"
                    android:text="@string/text_coupon_lib"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/ts_14" />

                <EditText
                    android:id="@+id/et_coupon_lib"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_51"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@null"
                    android:hint="@string/hint_coupon_lib"
                    android:inputType="number"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintLeft_toRightOf="@id/tv_lib_count"
                    app:layout_constraintRight_toRightOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintTop_toBottomOf="@id/tv_lib_count" />


                <TextView
                    android:id="@+id/tv_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_51"
                    android:gravity="center"
                    android:text="@string/text_coupon_limit"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintTop_toBottomOf="@id/tv_lib_count" />

                <EditText
                    android:id="@+id/et_coupon_limit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_51"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@null"
                    android:hint="@string/hint_coupon_limit"
                    android:inputType="number"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintLeft_toRightOf="@id/tv_limit"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_limit" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintTop_toBottomOf="@id/tv_limit" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_btm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_103"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                app:layout_constraintTop_toBottomOf="@id/ctl_center">

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_51"
                    android:gravity="center"
                    android:text="@string/text_coupon_start"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/ts_14" />

                <TextView
                    android:id="@+id/et_start_time"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_51"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_coupon_start"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintLeft_toRightOf="@id/tv_start_time"
                    app:layout_constraintRight_toRightOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintTop_toBottomOf="@id/tv_start_time" />


                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_51"
                    android:gravity="center"
                    android:text="@string/text_coupon_end"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintTop_toBottomOf="@id/tv_start_time" />

                <TextView
                    android:id="@+id/et_end_time"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_51"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@null"
                    android:hint="@string/hint_coupon_end"
                    android:gravity="center_vertical"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintLeft_toRightOf="@id/tv_end_time"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_end_time" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintTop_toBottomOf="@id/tv_end_time" />

            </android.support.constraint.ConstraintLayout>


            <Button
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:layout_marginStart="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_24"
                android:background="@drawable/normal_red_btn_bg"
                android:text="@string/text_config_add"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_17"
                app:layout_constraintTop_toBottomOf="@id/ctl_btm" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>