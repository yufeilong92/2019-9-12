<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingConstraints">

    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root_title">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25">

            <TextView
                android:id="@+id/tv_choose_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_33"
                android:text="@string/text_choose_role"
                android:textColor="@color/color_444A53"
                android:textSize="@dimen/ts_22"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/text_choose_role_tip"
                android:textColor="@color/color_7B8391"
                android:textSize="@dimen/ts_13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_choose_role" />

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_79"
                android:background="@mipmap/jft_but_resumeuploadavatar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_choose_role" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp_8"
                android:text="@string/text_up_header"
                app:layout_constraintLeft_toLeftOf="@id/iv_header"
                app:layout_constraintRight_toRightOf="@id/iv_header"
                app:layout_constraintTop_toBottomOf="@id/iv_header" />


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_83"
                android:layout_marginTop="@dimen/dp_92"
                app:layout_constraintTop_toBottomOf="@id/iv_header">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:text="@string/text_job_name"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />

                <EditText
                    android:id="@+id/et_real_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@null"
                    android:hint="@string/hint_req_job_name"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintTop_toBottomOf="@id/tv_name" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_F0"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_gender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_83"
                app:layout_constraintTop_toBottomOf="@id/ctl_name">

                <TextView
                    android:id="@+id/tv_gender_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:text="@string/text_job_gender"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:hint="@string/hint_req_job_gender"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintTop_toBottomOf="@id/tv_gender_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_F0"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_bron"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_83"
                app:layout_constraintTop_toBottomOf="@id/ctl_gender">

                <TextView
                    android:id="@+id/tv_bron_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:text="@string/text_job_bron"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />

                <TextView
                    android:id="@+id/tv_bron"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:hint="@string/hint_req_job_bron"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintTop_toBottomOf="@id/tv_bron_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_F0"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_work"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_83"
                app:layout_constraintTop_toBottomOf="@id/ctl_bron">

                <TextView
                    android:id="@+id/tv_work_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:text="@string/text_job_work"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />

                <TextView
                    android:id="@+id/tv_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:hint="@string/hint_req_job_work"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintTop_toBottomOf="@id/tv_work_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_F0"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_83"
                app:layout_constraintTop_toBottomOf="@id/ctl_work">

                <TextView
                    android:id="@+id/tv_city_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:text="@string/text_job_city"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:hint="@string/hint_req_job_city"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintTop_toBottomOf="@id/tv_city_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_F0"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_83"
                app:layout_constraintTop_toBottomOf="@id/ctl_city">

                <TextView
                    android:id="@+id/tv_phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:text="@string/text_job_phone"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:hint="@string/hint_req_job_phone"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintTop_toBottomOf="@id/tv_phone_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_F0"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_83"
                app:layout_constraintTop_toBottomOf="@id/ctl_phone">

                <TextView
                    android:id="@+id/tv_email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:text="@string/text_job_email"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:hint="@string/hint_req_job_email"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintTop_toBottomOf="@id/tv_email_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_F0"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                app:layout_constraintTop_toBottomOf="@id/ctl_email">

                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:text="@string/text_next_step"
                    android:background="@drawable/shape_gray_job_normal_rectangle"
                    android:textSize="@dimen/ts_14"
                    android:gravity="center"
                    android:textColor="@color/color_D0D0D0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>