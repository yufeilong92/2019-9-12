<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:ignore="MissingConstraints,RtlSymmetry">

    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />

    <TextView
        android:id="@+id/tv_tip_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:paddingStart="@dimen/dp_21"
        android:text="@string/text_choose_release"
        android:textColor="@color/color_444A53"
        android:textSize="@dimen/ts_25"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/root_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:paddingStart="@dimen/dp_21"
        android:text="@string/text_choose_coupon_tip"
        android:textColor="@color/color_444A53"
        android:textSize="@dimen/ts_13"
        app:layout_constraintTop_toBottomOf="@id/tv_tip_choose" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/ctl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/shape_white_rectangle"
        android:paddingStart="@dimen/dp_18"
        app:layout_constraintTop_toBottomOf="@id/tv_tip_choose">


        <ImageView
            android:id="@+id/rv_img"
            android:layout_width="@dimen/dp_39"
            android:layout_height="@dimen/dp_39"
            android:background="@mipmap/jft_but_selectreleaseredpack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@mipmap/jft_but_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_17"
            android:paddingTop="@dimen/dp_21"
            android:text="@string/text_red_bag"
            android:textColor="@color/color_444A53"
            android:textSize="@dimen/ts_17"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/rv_img" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/ts_30"
            android:text="@string/text_red_bag_tip"
            android:textColor="@color/color_7B8391"
            android:lineSpacingExtra="@dimen/dp_5"
            android:textSize="@dimen/ts_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/rv_img"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/ctl_btm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
       android:layout_margin="@dimen/dp_20"
        android:background="@drawable/shape_white_rectangle"
        android:paddingStart="@dimen/dp_18"
        app:layout_constraintTop_toBottomOf="@id/ctl_top">


        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/dp_39"
            android:layout_height="@dimen/dp_39"
            android:background="@mipmap/jft_icon_choosetoissuecoupons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@mipmap/jft_but_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_17"
            android:paddingTop="@dimen/dp_21"
            android:text="@string/text_red_coupon"
            android:textColor="@color/color_444A53"
            android:textSize="@dimen/ts_17"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/iv_image" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/ts_30"
            android:text="@string/text_coupon_tip"
            android:textColor="@color/color_7B8391"
            android:lineSpacingExtra="@dimen/dp_5"
            android:textSize="@dimen/ts_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>