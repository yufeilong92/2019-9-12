<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:ignore="MissingConstraints">

    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:layout_margin="@dimen/dp_13"
        android:background="@drawable/shape_white_rectangle"
        android:paddingStart="@dimen/dp_30"
        android:paddingTop="@dimen/dp_24"
        android:paddingEnd="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_14"
        app:layout_constraintTop_toBottomOf="@id/root_title">


        <TextView
            android:id="@+id/tv_set_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置金额"
            android:textColor="@color/black_33"
            android:textSize="@dimen/ts_14" />


        <TextView
            android:id="@+id/tv_report_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="￥"
            android:textColor="@color/black_33"
            android:textSize="@dimen/ts_35"
            app:layout_constraintTop_toBottomOf="@id/tv_set_count" />

        <EditText
            android:id="@+id/et_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@null"
            android:textColor="@color/black_33"
            android:inputType="numberDecimal"
            android:textSize="@dimen/ts_35"
            app:layout_constraintBottom_toBottomOf="@id/tv_report_tip"
            app:layout_constraintLeft_toRightOf="@id/tv_report_tip"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_report_tip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_25"
            app:layout_constraintTop_toBottomOf="@id/et_count" />


        <Button
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:background="@drawable/normal_red_btn_bg_"
            android:text="@string/text_config_add"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_17"
            app:layout_constraintBottom_toBottomOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>