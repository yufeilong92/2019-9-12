<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical"

    tools:ignore="MissingConstraints">

    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/root_title">

        <TextView
            android:id="@+id/tv_time1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_51"
            android:gravity="center"
            android:text="上午时间："
            android:textColor="@color/color_444A53"
            android:textSize="@dimen/ts_14" />

        <TextView
            android:id="@+id/tv_top_time"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_51"
            android:gravity="center_vertical"
            android:hint="请选择上午时间"
            android:textColor="@color/color_444A53"
            android:textSize="@dimen/ts_14"
            app:layout_constraintLeft_toRightOf="@id/tv_time1"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_time2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_51"
            android:gravity="center"
            android:text="下午时间："
            android:textColor="@color/color_444A53"
            android:textSize="@dimen/ts_14"
            app:layout_constraintTop_toBottomOf="@id/tv_time1" />

        <TextView
            android:id="@+id/tv_btm_time"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_51"
            android:gravity="center_vertical"
            android:hint="请选择下午时间"
            android:textColor="@color/color_444A53"
            android:textSize="@dimen/ts_14"
            app:layout_constraintLeft_toRightOf="@id/tv_time2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_time2" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ctl_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_51"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">


        <CheckBox
            android:id="@+id/cb_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/gender_selector"
            android:button="@null" />

        <TextView
            app:layout_constraintLeft_toRightOf="@id/cb_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="@id/cb_open"
            app:layout_constraintBottom_toBottomOf="@id/cb_open"
            android:layout_gravity="center_vertical"
            android:text="是否是全天" />

    </android.support.constraint.ConstraintLayout>


    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_24"
        android:background="@drawable/normal_red_btn_bg"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_17"
        app:layout_constraintTop_toBottomOf="@id/ctl_time" />


</LinearLayout>