<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_color">

    <View
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="@dimen/dp_24"/>

    <include layout="@layout/layout_normal_title"/>


    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:minHeight="@dimen/dp_150"
        android:maxLength="200"
        android:textSize="@dimen/ts_14"
        android:gravity="top"
        android:textColor="@color/color_444A53"
        android:textColorHint="@color/edit_hint_color"
        android:hint="@string/hint_shop_notice"
        android:padding="@dimen/dp_16" />

    <TextView
        android:id="@+id/tv_content_length"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/white"
        android:gravity="center_vertical|end"
        android:paddingEnd="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/et_content" />


    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_24"
        android:background="@drawable/normal_red_btn_bg"
        android:text="@string/text_done"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_17"
        app:layout_constraintTop_toBottomOf="@id/tv_content_length" />

</LinearLayout>