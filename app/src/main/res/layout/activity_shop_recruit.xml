<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingConstraints">

    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />


    <TextView
        android:id="@+id/tv_choose_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_33"
        android:text="@string/text_choose_role"
        android:textColor="@color/color_444A53"
        android:textSize="@dimen/ts_18"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/text_choose_role_tip"
        android:textColor="@color/color_7B8391"
        android:textSize="@dimen/ts_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_choose_role" />


    <ImageView
        android:id="@+id/iv_req_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@mipmap/jft_img_iwanttoapplyforajob"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_choose_role" />


    <TextView
        android:id="@+id/tv_req_job"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_40"
        android:textColor="@color/color_444A53"
        android:gravity="center"
        android:textSize="@dimen/ts_15"
        android:text="@string/text_req_job"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_gray_dd_rectangle"
        app:layout_constraintTop_toBottomOf="@id/iv_req_job" />



    <ImageView
        android:id="@+id/iv_resp_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_72"
        android:background="@mipmap/jft_img_iwanttorecruit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_req_job" />


    <TextView
        android:id="@+id/tv_resp_job"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_40"
        android:textColor="@color/color_444A53"
        android:gravity="center"
        android:textSize="@dimen/ts_15"
        android:text="@string/text_resp_job"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_gray_dd_rectangle"
        app:layout_constraintTop_toBottomOf="@id/iv_resp_job" />


</android.support.constraint.ConstraintLayout>