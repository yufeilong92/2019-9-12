<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_color"
    tools:context=".ui.activity.home.ShopServiceActivity">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4">

        <ImageView
            android:id="@+id/iv_shoplist_back"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:scaleType="center"
            android:src="@mipmap/jft_but_back" />

        <RelativeLayout
            android:id="@+id/rl_shop_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:layout_weight="1"
            android:background="@drawable/bg_gray_transp_4_raido">

            <ImageView
                android:id="@+id/iv_moreshop_search"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@mipmap/jft_but_bosshomesearch" />

            <TextView
                android:id="@+id/tv_shop_search"
                android:gravity="center_vertical"
                style="@style/text_main_13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_moreshop_search"
                android:background="@color/transparent"
                android:text="请输入您要搜索的商家"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:singleLine="true" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_shop_baidu"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_8"
            android:visibility="invisible"
            android:paddingRight="@dimen/dp_16"
            android:scaleType="center"
            android:src="@mipmap/jft_but_mapredenvelopeicon" />
    </LinearLayout>

    <include layout="@layout/gm_refhres_layout" />

</LinearLayout>