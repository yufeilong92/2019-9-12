<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:ignore="MissingConstraints,RtlSymmetry">

    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root_title">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_top_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_39"
                android:gravity="center"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/text_shop_base_info"
                android:textColor="@color/color_444A53"
                android:textSize="@dimen/ts_14" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/shape_white_rectangle"
                app:layout_constraintTop_toBottomOf="@id/tv_top_item_desc">

                <TextView
                    android:id="@+id/tv_shop_header"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_59"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_13"
                    android:text="@string/text_shop_header_img"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15" />

                <ImageView
                    android:id="@+id/iv_shop_image"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:src="@mipmap/jft_img_defaulthead"
                    app:layout_constraintBottom_toBottomOf="@id/tv_shop_header"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_shop_header" />

                <ImageView
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_13"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:background="@mipmap/jft_but_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/tv_shop_header"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_shop_header" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_header" />

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_59"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_13"
                    android:text="@string/text_shop_nicker"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_header" />

                <TextView
                    android:id="@+id/tv_set_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="right"
                    android:hint="@string/hint_set_shop_name"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_shop_name"
                    app:layout_constraintLeft_toRightOf="@id/tv_shop_name"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_header"
                    app:layout_constraintTop_toTopOf="@id/tv_shop_name" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_name" />

                <TextView
                    android:id="@+id/tv_shop_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_59"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_13"
                    android:text="@string/text_shop_desc_"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_name" />

                <TextView
                    android:id="@+id/tv_set_desc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="right"
                    android:hint="@string/hint_unset"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_shop_desc"
                    app:layout_constraintLeft_toRightOf="@id/tv_shop_desc"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_shop_desc" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_desc" />

                <TextView
                    android:id="@+id/tv_shop_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_59"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_13"
                    android:text="@string/text_shop_main"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_desc" />

                <TextView
                    android:id="@+id/tv_set_main"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="right"
                    android:hint="@string/hint_main_category"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_shop_sale"
                    app:layout_constraintLeft_toRightOf="@id/tv_shop_sale"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_shop_sale" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_sale" />

                <TextView
                    android:id="@+id/tv_shop_address"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_59"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_13"
                    android:text="@string/text_shop_address"
                    android:visibility="gone"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_sale" />

                <TextView
                    android:id="@+id/tv_set_address"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="right"
                    android:hint="@string/hint_set_address"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_shop_address"
                    app:layout_constraintLeft_toRightOf="@id/tv_shop_address"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_shop_address" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_E9EFF7"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_address" />

                <TextView
                    android:id="@+id/tv_shop_detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_59"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_13"
                    android:text="@string/text_shop_detail_address"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_address" />

                <TextView
                    android:id="@+id/tv_set_detail_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="right"
                    android:hint="@string/hint_set_detail_address"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_shop_detail_address"
                    app:layout_constraintLeft_toRightOf="@id/tv_shop_detail_address"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_shop_detail_address" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_detail_address" />



                <TextView
                    android:id="@+id/tv_shop_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_59"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_13"
                    android:text="@string/text_shop_phone"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_detail_address" />

                <TextView
                    android:id="@+id/tv_set_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="right"
                    android:hint="@string/hint_set_phone"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_shop_phone"
                    app:layout_constraintLeft_toRightOf="@id/tv_shop_phone"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_shop_phone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_phone" />

                <TextView
                    android:id="@+id/tv_shop_level"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_59"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_13"
                    android:text="@string/text_shop_level"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_phone" />

                <com.tsyc.tianshengyoucai.view.StarBar
                    android:id="@+id/sb_shop_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_30"
                    app:layout_constraintBottom_toBottomOf="@id/tv_shop_level"
                    app:layout_constraintRight_toRightOf="parent"

                    app:layout_constraintTop_toTopOf="@id/tv_shop_level"
                    app:starCount="5"
                    app:starDistance="5dp"
                    app:starEmpty="@mipmap/icon_star_normal"
                    app:starFill="@mipmap/icon_star_selected"
                    app:starSize="@dimen/dp_10" />

                <ImageView
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_13"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:background="@mipmap/jft_but_arrow"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/tv_shop_level"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_shop_level" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_level" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_39"
                android:gravity="center"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/text_shop_add_info"
                android:textColor="@color/color_444A53"
                android:textSize="@dimen/ts_14"
                app:layout_constraintTop_toBottomOf="@id/ctl_top" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_btm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_177"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/shape_white_rectangle"
                app:layout_constraintTop_toBottomOf="@id/tv_info">

                <TextView
                    android:id="@+id/tv_shop_qualify"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_59"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_13"
                    android:text="@string/text_shop_qualify"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15" />

                <TextView
                    android:id="@+id/tv_set_power"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="right"
                    android:hint="@string/hint_set_shop_qualify"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_shop_qualify"
                    app:layout_constraintLeft_toRightOf="@id/tv_shop_qualify"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_shop_qualify" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_qualify" />

                <TextView
                    android:id="@+id/tv_shop_work"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_59"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_13"
                    android:text="@string/text_shop_work"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_qualify" />

                <TextView
                    android:id="@+id/tv_set_work"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="right"
                    android:hint="@string/hint_unset"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_shop_work"
                    app:layout_constraintLeft_toRightOf="@id/tv_shop_work"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_shop_work" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_E9EFF7"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_work" />

                <TextView
                    android:id="@+id/tv_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_59"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_13"
                    android:text="@string/text_shop_sync"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_work" />

                <CheckBox
                    android:id="@+id/cb_set_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:background="@drawable/to_shop_take_selector"
                    android:button="@null"
                    app:layout_constraintBottom_toBottomOf="@id/tv_sync"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_sync" />

            </android.support.constraint.ConstraintLayout>

            <View
                app:layout_constraintTop_toBottomOf="@id/ctl_btm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>