<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:ignore="MissingConstraints,RtlSymmetry">

    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root_title">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_31"
                android:background="@color/color_FFEBC9"
                android:gravity="center"
                android:text="@string/text_choose_spec"
                android:textColor="@color/color_444A53"
                android:textSize="@dimen/ts_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_28"
                android:paddingStart="@dimen/dp_16"
                android:text="@string/text_set_spec"
                android:textColor="@color/color_444A53"
                android:textSize="@dimen/ts_18"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_55"
                android:paddingStart="@dimen/dp_16"
                android:text="@string/text_set_spec_tip"
                android:textColor="@color/color_7B8391"
                android:textSize="@dimen/ts_13"
                app:layout_constraintTop_toBottomOf="@id/tv_top" />


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_spec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_85"
                android:background="@color/white"
                android:minHeight="@dimen/dp_270"
                android:paddingStart="@dimen/dp_16"
                android:paddingTop="@dimen/dp_18"
                android:paddingEnd="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@id/tv_top">

                <EditText
                    android:id="@+id/et_spec_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_51"
                    android:background="@null"
                    android:hint="@string/hint_spec_name"
                    android:textColorHint="@color/edit_hint_color"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_DDE5EF"
                    app:layout_constraintTop_toBottomOf="@id/et_spec_name" />

                <TextView
                    android:id="@+id/tv_spec"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_38"
                    android:gravity="center_vertical"
                    android:text="@string/text_spec_choose"
                    app:layout_constraintHorizontal_weight="0.8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tv_price"
                    app:layout_constraintTop_toBottomOf="@id/et_spec_name" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_38"
                    android:gravity="center_vertical"
                    android:text="@string/text_spec_price"
                    app:layout_constraintHorizontal_weight="0.8"
                    android:layout_marginStart="@dimen/dp_8"
                    app:layout_constraintLeft_toRightOf="@id/tv_spec"
                    app:layout_constraintRight_toLeftOf="@id/tv_count"
                    app:layout_constraintTop_toBottomOf="@id/et_spec_name" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_38"
                    android:gravity="center_vertical"
                    android:text="@string/text_spec_count"
                    android:layout_marginStart="@dimen/dp_8"
                    app:layout_constraintHorizontal_weight="0.8"
                    app:layout_constraintLeft_toRightOf="@id/tv_price"
                    app:layout_constraintRight_toLeftOf="@id/tv_inner_money"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_spec_name" />

                <TextView
                    android:id="@+id/tv_inner_money"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_38"
                    android:gravity="center_vertical"
                    android:text="内部价"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/dp_8"
                    app:layout_constraintHorizontal_weight="0.8"
                    app:layout_constraintLeft_toRightOf="@id/tv_count"
                    app:layout_constraintRight_toLeftOf="@id/iv_delete"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_spec_name" />

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/tv_inner_money"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_spec_name" />


                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_spec"
                    android:layout_height="@dimen/dp_40"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_10"
                    tools:ignore="MissingConstraints">


                    <EditText
                        android:id="@+id/et_spec"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_39"
                        android:background="@drawable/shape_gray_rectangle"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_15"
                        app:layout_constraintHorizontal_weight="0.8"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/et_price" />

                    <EditText
                        android:id="@+id/et_price"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_39"
                        android:layout_marginStart="@dimen/dp_8"
                        android:background="@drawable/shape_gray_rectangle"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:padding="@dimen/dp_10"
                        android:inputType="numberDecimal"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_15"
                        app:layout_constraintHorizontal_weight="0.8"
                        app:layout_constraintLeft_toRightOf="@id/et_spec"
                        app:layout_constraintRight_toLeftOf="@id/et_count" />

                    <EditText
                        android:id="@+id/et_count"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_39"
                        android:layout_marginStart="@dimen/dp_8"
                        android:background="@drawable/shape_gray_rectangle"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:padding="@dimen/dp_10"
                        android:inputType="number"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_15"
                        app:layout_constraintHorizontal_weight="0.8"
                        app:layout_constraintLeft_toRightOf="@id/et_price"
                        app:layout_constraintRight_toLeftOf="@id/et_inner_money"
                        app:layout_constraintRight_toRightOf="parent" />

                    <EditText
                        android:id="@+id/et_inner_money"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_39"
                        android:layout_marginStart="@dimen/dp_8"
                        android:background="@drawable/shape_gray_rectangle"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:padding="@dimen/dp_10"
                        android:inputType="numberDecimal"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_15"
                        app:layout_constraintHorizontal_weight="0.8"
                        app:layout_constraintLeft_toRightOf="@id/et_count"
                        app:layout_constraintRight_toLeftOf="@id/rl_delete"
                        app:layout_constraintRight_toRightOf="parent" />

                    <RelativeLayout
                        android:id="@+id/rl_delete"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        app:layout_constraintLeft_toRightOf="@id/et_inner_money"
                        app:layout_constraintRight_toRightOf="parent">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/jft_but_specificationclosed" />
                    </RelativeLayout>

                </android.support.constraint.ConstraintLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_spec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_spec" />

                <TextView
                    android:id="@+id/tv_spec_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/text_spec_add"
                    android:textColor="@color/color_2276EF"
                    app:layout_constraintTop_toBottomOf="@id/rv_spec" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/color_DDE5EF"
                    app:layout_constraintTop_toBottomOf="@id/tv_spec_add" />

                <TextView
                    android:id="@+id/tv_delete_spec"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="center"
                    android:text="@string/text_delete_spec"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/ts_15"
                    app:layout_constraintTop_toBottomOf="@id/tv_spec_add" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_144"
                app:layout_constraintTop_toBottomOf="@id/ctl_spec">

                <Button
                    android:id="@+id/btn_commit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:layout_marginStart="@dimen/dp_24"
                    android:layout_marginEnd="@dimen/dp_24"
                    android:background="@drawable/normal_red_btn_bg"
                    android:text="@string/text_spec_set_done"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>