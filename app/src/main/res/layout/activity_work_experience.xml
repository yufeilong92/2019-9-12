<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingConstraints">

    <include
        android:id="@+id/root_title"
        layout="@layout/toolbar_normal_title" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/root_title">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25">

            <TextView
                android:id="@+id/tv_choose_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_43"
                android:text="@string/text_work_experience"
                android:textColor="@color/color_444A53"
                android:textSize="@dimen/ts_22"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/text_work_tip"
                android:textColor="@color/color_7B8391"
                android:textSize="@dimen/ts_13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_choose_role" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_school"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_83"
                android:layout_marginTop="@dimen/dp_93"
                app:layout_constraintTop_toBottomOf="@id/tv_choose_role">

                <TextView
                    android:id="@+id/tv_school_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:text="@string/text_job_company"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />

                <EditText
                    android:id="@+id/et_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@null"
                    android:hint="@string/hint_req_job_company"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintTop_toBottomOf="@id/tv_school_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_F0"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_work_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_83"
                app:layout_constraintTop_toBottomOf="@id/ctl_school">

                <TextView
                    android:id="@+id/tv_experience_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:text="@string/text_job_time"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:hint="@string/hint_req_job_time"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintTop_toBottomOf="@id/tv_experience_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_F0"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_work_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_83"
                app:layout_constraintTop_toBottomOf="@id/ctl_work_time">

                <TextView
                    android:id="@+id/tv_special_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:text="@string/text_job_work_type"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />

                <TextView
                    android:id="@+id/tv_work_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:hint="@string/hint_req_job_work_time"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintTop_toBottomOf="@id/tv_special_text" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_F0"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_work_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_83"
                app:layout_constraintTop_toBottomOf="@id/ctl_work_type">

                <TextView
                    android:id="@+id/tv_times_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:text="@string/text_job_content"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />

                <EditText
                    android:id="@+id/et_work_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@null"
                    android:hint="@string/hint_req_job_work_content"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintTop_toBottomOf="@id/tv_times_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_F0"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ctl_work_content">

                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@drawable/shape_gray_job_normal_rectangle"
                    android:gravity="center"
                    android:text="@string/text_next_step"
                    android:textColor="@color/color_D0D0D0"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>