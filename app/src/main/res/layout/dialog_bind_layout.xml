<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/gm_white_4_raido"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_dialog_band_logo"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_60"
                android:src="@mipmap/jft_icon_alipaypay" />

            <TextView
                android:id="@+id/tv_dialog_bind_content"
                style="@style/text_fu_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_16"
                android:text="您还未绑定支付宝账号，无法提现" />

            <TextView
                android:id="@+id/tv_dialog_bind_contents"
                android:layout_marginTop="@dimen/dp_10"
                style="@style/text_main_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="请先绑定支付宝账号！" />

            <LinearLayout
                android:paddingBottom="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_dialog_bind_canner"
                    style="@style/text_main_17"
                    android:background="@drawable/gm_4_white_radio_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_weight="1"

                    android:text="再想想" />

                <Button
                    android:id="@+id/btn_dialog_bind_bind"
                    style="@style/text_17_white"
                    android:background="@drawable/gm_4_red_bg_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:text="去绑定" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/text_17_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/jft_img_bulletwindowdecoration"
            android:gravity="center"
            android:text="完善资料" />
    </RelativeLayout>

</LinearLayout>