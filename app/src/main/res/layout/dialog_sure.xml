<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gm_white_4_raido"
        android:padding="@dimen/dp_8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_sure_title"
            style="@style/text_main_14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:gravity="center_horizontal|center"
            android:text="提示?" />

        <TextView
            android:id="@+id/tv_dialog_sure_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_horizontal|center"
            android:text="内存" />

        <View style="@style/line_height_one" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_sure_canner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"

                android:text="取消" />

            <View style="@style/line_with_one" />

            <TextView
                android:id="@+id/tv_dialog_sure_sure"
                android:textColor="@color/color_2276EF"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>