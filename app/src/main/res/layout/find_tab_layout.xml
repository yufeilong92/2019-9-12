<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_39">

    <TextView
        android:id="@+id/tv_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="@string/app_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_tab_left"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/tv_tab_title"
        android:layout_marginStart="@dimen/dp_5"
        android:background="@mipmap/jft_but_screeningup"
        app:layout_constraintLeft_toRightOf="@id/tv_tab_title"
        app:layout_constraintTop_toTopOf="@id/tv_tab_title" />

</android.support.constraint.ConstraintLayout>