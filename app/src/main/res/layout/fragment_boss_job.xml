<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.recruite.boss.BossJobFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74"
        android:background="@color/color_5769E7">

        <ImageView
            android:id="@+id/iv_boss_home_search"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:scaleType="center"
            android:src="@mipmap/ic_search" />

        <TextView
            android:layout_alignParentBottom="true"
            style="@style/text_17_white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_48"
            android:layout_centerInParent="true"
            android:text="推荐职位" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_boss_home_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <View style="@style/line_with_one"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            />
        <ImageView
            android:id="@+id/iv_boss_home_delete"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:scaleType="center"
            android:src="@mipmap/ic_home_more" />
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/view_page_boss_home_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>