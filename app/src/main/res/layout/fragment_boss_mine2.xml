<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.recruite.boss.BossMineFragment">

    <LinearLayout
        android:id="@+id/ll_boss_me_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/ctl_top"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_265"
                    android:background="@color/color_5769E7"
                    android:paddingStart="@dimen/dp_25"
                    android:paddingTop="@dimen/dp_60"
                    android:paddingEnd="@dimen/dp_25">

                    <ImageView
                        android:id="@+id/iv_boss_header"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="80dp"
                        android:layout_height="@dimen/dp_80"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/tv_boss_name"
                        app:layout_constraintTop_toTopOf="@id/iv_boss_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="header"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ts_25"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_boss_edit_info"
                        app:layout_constraintBottom_toBottomOf="@id/iv_boss_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@mipmap/jft_but_bosspersonalcenterforward"
                        android:drawablePadding="@dimen/dp_5"
                        android:text="编辑我的个人信息"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ts_13" />


                    <LinearLayout
                        android:id="@+id/ll_boss_wait_see"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/ll_boss_invite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingEnd="@dimen/dp_25">

                        <TextView
                            android:id="@+id/tv_boss_see_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ts_19"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="待查看"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ts_12" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_boss_invite"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/ll_boss_wait_see"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dp_25"
                        android:paddingEnd="@dimen/dp_25">

                        <TextView
                            android:id="@+id/tv_boss_invite_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ts_19"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="邀面试"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ts_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_boss_deal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/ll_boss_invite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dp_25"
                        android:paddingEnd="@dimen/dp_25">

                        <TextView
                            android:id="@+id/tv_boss_deal_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ts_19"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="已处理"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ts_12" />

                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-20dp"
                    android:background="@drawable/shape_boss_main_btm"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_16">

                    <TextView
                        android:id="@+id/tv_boss_job_manage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:layout_marginTop="@dimen/dp_30"
                        android:drawableStart="@mipmap/jft_but_positionmanagement"
                        android:drawableEnd="@mipmap/jft_but_arrow"
                        android:drawablePadding="@dimen/dp_20"
                        android:gravity="center_vertical"
                        android:text="职位管理"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_16" />

                    <TextView
                        android:id="@+id/tv_boss_send_release"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:drawableStart="@mipmap/jft_but_publishingposts"
                        android:drawableEnd="@mipmap/jft_but_arrow"
                        android:drawablePadding="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="发布职位"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_16" />

                    <TextView
                        android:id="@+id/tv_boss_like_collect"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:drawableStart="@mipmap/jft_but_forme"
                        android:drawableEnd="@mipmap/jft_but_arrow"
                        android:drawablePadding="@dimen/dp_20"
                        android:gravity="center_vertical"
                        android:text="对我感兴趣"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_16" />

                    <TextView
                        android:id="@+id/tv_booss_company_info"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:drawableStart="@mipmap/jft_but_companyinformation"
                        android:drawableEnd="@mipmap/jft_but_arrow"
                        android:drawablePadding="@dimen/dp_20"
                        android:gravity="center_vertical"
                        android:text="公司信息"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_16" />

                    <TextView
                        android:id="@+id/tv_boss_change_id"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:drawableStart="@mipmap/jft_but_identityswitching"
                        android:drawableEnd="@mipmap/jft_but_arrow"
                        android:drawablePadding="@dimen/dp_20"
                        android:gravity="center_vertical"
                        android:text="切换身份"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_16" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>