<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/ctl_btm"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/shape_white_rectangle"
                android:paddingStart="@dimen/dp_12"
                android:paddingTop="@dimen/dp_19"
                android:paddingEnd="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_19"
                app:layout_constraintTop_toBottomOf="@id/ctl_top">


                <TextView
                    android:id="@+id/tv_address_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/jft_but_ewlyadded"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center"
                    android:text="@string/text_add_new_address"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/ts_15"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/ctl_has_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_address_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@mipmap/jft_icon_interviewcontacts"
                        android:drawablePadding="@dimen/dp_7"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_14" />

                    <TextView
                        android:id="@+id/tv_address_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:drawableStart="@mipmap/jft_icon_contactinformationofconsignee"
                        android:drawablePadding="@dimen/dp_7"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_14"
                        app:layout_constraintBottom_toBottomOf="@id/tv_address_name"
                        app:layout_constraintLeft_toRightOf="@id/tv_address_name"
                        app:layout_constraintTop_toTopOf="@id/tv_address_name" />


                    <TextView
                        android:id="@+id/tv_address_default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ts_25"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:drawableStart="@mipmap/jft_icon_locationofinterview"
                        android:drawablePadding="@dimen/dp_7"
                        android:lines="2"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_14"
                        app:layout_constraintTop_toBottomOf="@id/tv_address_name" />

                    <ImageView
                        android:layout_width="@dimen/dp_7"
                        android:layout_height="@dimen/dp_13"
                        android:background="@mipmap/jft_but_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_white_rectangle"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                app:layout_constraintTop_toBottomOf="@id/ctl_address">


                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:text="商品详情"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:id="@+id/rl_img"
                    android:layout_width="@dimen/dp_84"
                    android:layout_height="@dimen/dp_84"
                    android:layout_marginTop="@dimen/dp_15"
                    android:padding="@dimen/dp_2"
                    app:layout_constraintLeft_toLeftOf="@id/tv_shop_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_name">

                    <ImageView
                        android:id="@+id/iv_order_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_order_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_14"
                    android:lines="1"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/rl_img"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/rl_img"
                    tools:text="111111111111111111" />


                <TextView
                    android:id="@+id/tv_order_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_8"
                    android:lines="1"
                    android:textColor="@color/color_7B8391"
                    android:textSize="@dimen/ts_11"
                    app:layout_constraintBottom_toBottomOf="@id/rl_img"
                    app:layout_constraintLeft_toRightOf="@id/rl_img"
                    app:layout_constraintTop_toTopOf="@id/rl_img"
                    tools:text="111111111111111111" />


                <TextView
                    android:id="@+id/tv_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_14"
                    android:textColor="@color/tab_color"
                    app:layout_constraintBottom_toBottomOf="@id/rl_img"
                    app:layout_constraintLeft_toRightOf="@id/rl_img"
                    tools:text="111" />

                <TextView
                    android:id="@+id/tv_order_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_13"
                    app:layout_constraintBottom_toBottomOf="@id/tv_order_price"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_order_price" />


                <TextView
                    android:id="@+id/tv_user_say"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="center"
                    android:text="买家留言："
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15"
                    app:layout_constraintTop_toBottomOf="@id/tv_order_count" />

                <EditText
                    android:id="@+id/et_leave_msg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@null"
                    android:hint="选填（50字以内）"
                    android:maxLength="50"
                    android:paddingTop="@dimen/dp_12"
                    android:textColor="@color/color_444A53"
                    android:textColorHint="@color/edit_hint_color"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintLeft_toRightOf="@id/tv_user_say"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_user_say" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tv_user_say" />

                <TextView
                    android:id="@+id/tv_bag_type"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:drawableStart="@mipmap/jft_icon_coupondeduction"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:text="红包/优惠卷"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tv_user_say" />

                <TextView
                    android:id="@+id/tv_choose_coupon"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:hint="请选择优惠券"
                    android:paddingStart="@dimen/dp_10"
                    android:textColor="@color/color_444A53"
                    android:textColorHint="@color/edit_hint_color"
                    android:textSize="@dimen/ts_14"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/tv_bag_type"
                    app:layout_constraintLeft_toRightOf="@id/tv_bag_type"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_bag_type" />
            </android.support.constraint.ConstraintLayout>

            <View
                android:id="@+id/view_line_one"
                style="@style/line_height_one"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:visibility="gone" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_white_rectangle"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:visibility="gone">


                <TextView
                    android:id="@+id/tv_coupon_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45"
                    android:drawableStart="@mipmap/jft_icon_redpacklabel"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:text="红包"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_choose_onlinecoupon"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:hint="请选择红包/优惠券"
                    android:paddingStart="@dimen/dp_10"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/ts_13"
                    app:layout_constraintBottom_toBottomOf="@id/tv_coupon_tip"
                    app:layout_constraintLeft_toRightOf="@id/tv_coupon_tip"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/cb_use_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@drawable/gender_selector"
                    android:button="@null"
                    android:clickable="false"
                    app:layout_constraintBottom_toBottomOf="@id/tv_choose_onlinecoupon"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <View
                android:id="@+id/view_line_two"
                style="@style/line_height_one"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:visibility="gone" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_coupon_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_white_rectangle"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_use_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45"
                    android:drawableStart="@mipmap/jft_icon_coupondeduction"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:text="优惠卷"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_13" />

                <TextView
                    android:id="@+id/tv_online_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="请选择优惠券"
                    android:textColor="@color/tab_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_use_gold"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/cb_use_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:button="@null"
                    android:src="@mipmap/jft_but_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/tv_use_gold"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/shape_white_rectangle"
                android:padding="@dimen/dp_11">

                <TextView
                    android:id="@+id/tv_apply_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_33"
                    android:gravity="center"
                    android:text="商品总额："
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />

                <TextView
                    android:id="@+id/tv_back_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_12"
                    app:layout_constraintBottom_toBottomOf="@id/tv_apply_name"
                    app:layout_constraintLeft_toRightOf="@id/tv_apply_name"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_apply_name" />


                <TextView
                    android:id="@+id/tv_apply_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_33"
                    android:gravity="center"
                    android:text="邮费："
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintTop_toBottomOf="@id/tv_apply_name" />

                <TextView
                    android:id="@+id/tv_back_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/ts_12"
                    app:layout_constraintBottom_toBottomOf="@id/tv_apply_time"
                    app:layout_constraintLeft_toRightOf="@id/tv_apply_time"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_apply_time" />

                <TextView
                    android:id="@+id/tv_sub_money_title"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_33"
                    android:gravity="center"
                    android:text="红包/优惠卷："
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tv_apply_time" />

                <TextView
                    android:id="@+id/tv_sub_money"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_33"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/ts_14"
                    android:visibility="gone"
                    app:layout_constraintLeft_toRightOf="@id/tv_sub_money_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_apply_time" />


                <TextView
                    android:id="@+id/tv_apply_money"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_33"
                    android:gravity="center"
                    android:text="实付金额："
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintTop_toBottomOf="@id/tv_sub_money" />

                <TextView
                    android:id="@+id/tv_back_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/ts_12"
                    app:layout_constraintBottom_toBottomOf="@id/tv_apply_money"
                    app:layout_constraintLeft_toRightOf="@id/tv_apply_money"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_apply_money" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/shape_white_rectangle"
                android:visibility="gone"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_invite"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="邀请码："
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/et_invite"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_444A53"
                    android:textColorHint="@color/edit_hint_color"
                    android:gravity="center_vertical"
                    android:hint="无"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:singleLine="true"
                    app:layout_constraintLeft_toRightOf="@id/tv_invite"
                    app:layout_constraintRight_toRightOf="parent" />

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/ctl_btm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_61"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_24"
        android:paddingEnd="@dimen/dp_24"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_real_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="实付金额："
            android:textColor="@color/color_444A53"
            android:textSize="@dimen/ts_14" />

        <TextView
            android:id="@+id/tv_real_money_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/tab_color"
            android:textSize="@dimen/ts_14"
            app:layout_constraintBottom_toBottomOf="@id/tv_real_money"
            app:layout_constraintLeft_toRightOf="@id/tv_real_money"
            app:layout_constraintTop_toTopOf="@id/tv_real_money" />


        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/normal_red_btn_bg_"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_17"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>