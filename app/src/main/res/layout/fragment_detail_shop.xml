<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/ctl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp_15"
            tools:ignore="MissingConstraints,RtlSymmetry">

            <TextView
                android:id="@+id/tv_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_store_info"
                android:textColor="@color/color_444A53"
                android:textSize="@dimen/ts_15"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_door_image"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_10"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/tv_shop" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_shop_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_15"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tv_shop" />

            <TextView
                android:id="@+id/tv_shop_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/color_7B8391"
                android:textSize="@dimen/ts_12"
                app:layout_constraintTop_toBottomOf="@id/rv_shop_image" />

        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/ctl_pos_more"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_68"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:padding="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@id/ctl_top">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_16"
                android:background="@mipmap/jft_icon_jobinformationrecruitment" />

            <TextView
                android:id="@+id/tv_hot_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:text="@string/text_store_hot_pos"
                android:textColor="@color/color_444A53"
                android:textSize="@dimen/ts_14"
                app:layout_constraintBottom_toBottomOf="@id/iv_image"
                app:layout_constraintLeft_toRightOf="@id/iv_image"
                app:layout_constraintTop_toTopOf="@id/iv_image" />

            <TextView
                android:id="@+id/tv_pos_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_7B8391"
                android:textSize="@dimen/ts_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tv_hot_pos"
                app:layout_constraintTop_toBottomOf="@id/tv_hot_pos"
                tools:text="等3个热门工作" />

            <ImageView
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_13"
                android:background="@mipmap/jft_but_arrow"
                android:paddingEnd="@dimen/dp_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlSymmetry" />

        </android.support.constraint.ConstraintLayout>


        <TextView
            android:id="@+id/tv_shop_name_"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_59"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:text="@string/text_store_name"
            android:textColor="@color/color_444A53"
            app:layout_constraintTop_toBottomOf="@id/ctl_pos_more" />

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_59"
            android:background="@color/white"
            android:gravity="center|end"
            android:paddingEnd="@dimen/dp_15"
            android:textColor="@color/color_7B8391"
            android:textSize="@dimen/ts_14"
            app:layout_constraintBottom_toBottomOf="@id/tv_shop_name_"
            app:layout_constraintLeft_toRightOf="@id/tv_shop_name_"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_shop_name_" />

        <TextView
            android:id="@+id/tv_shop_cate"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_59"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/white"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:text="@string/text_store_cate"
            android:textColor="@color/color_444A53"
            app:layout_constraintTop_toBottomOf="@id/tv_shop_name_" />

        <TextView
            android:id="@+id/tv_store_cate"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_59"
            android:background="@color/white"
            android:gravity="center|end"
            android:paddingEnd="@dimen/dp_15"
            android:textColor="@color/color_7B8391"
            android:textSize="@dimen/ts_14"
            app:layout_constraintBottom_toBottomOf="@id/tv_shop_cate"
            app:layout_constraintLeft_toRightOf="@id/tv_shop_cate"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_shop_cate" />

        <TextView
            android:id="@+id/tv_shop_work"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_59"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/white"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:text="@string/text_work_time"
            android:textColor="@color/color_444A53"
            app:layout_constraintTop_toBottomOf="@id/tv_shop_cate" />

        <TextView
            android:id="@+id/tv_store_work"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_59"
            android:background="@color/white"
            android:gravity="center|end"
            android:paddingEnd="@dimen/dp_15"
            android:textColor="@color/color_7B8391"
            android:textSize="@dimen/ts_14"
            app:layout_constraintBottom_toBottomOf="@id/tv_shop_work"
            app:layout_constraintLeft_toRightOf="@id/tv_shop_work"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_shop_work" />


        <TextView
            android:id="@+id/tv_shop_phone_tip"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_59"
            android:background="@color/white"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_1"
            android:text="商家电话"
            android:textColor="@color/color_444A53"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@id/tv_shop_work" />

        <TextView
            android:id="@+id/tv_shop_phone"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_59"
            android:gravity="end|center_vertical"
            android:paddingEnd="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_444A53"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/tv_shop_phone_tip"
            app:layout_constraintLeft_toRightOf="@id/tv_shop_phone_tip"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_shop_phone_tip" />

        <TextView
            android:id="@+id/tv_profit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:drawableEnd="@mipmap/jft_but_arrow"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:text="@string/text_store_profit"
            android:textColor="@color/color_444A53"
            app:layout_constraintTop_toBottomOf="@id/tv_shop_phone_tip" />


        <TextView
            android:id="@+id/tv_report_shop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/text_report_shop"
            android:textColor="@color/color_444A53"
            android:textSize="@dimen/ts_15"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_profit" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            app:layout_constraintTop_toBottomOf="@id/tv_report_shop" />

    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.NestedScrollView>

