<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.activity.home.HomeSearchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:background="#F85859"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_8">


        <LinearLayout
            android:id="@+id/ll_home_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toLeftOf="@id/iv_home_type"
            android:alpha="0.4"
            android:background="@drawable/gm_4_gray_transp">

            <ImageView
                android:id="@+id/iv_hs_search"
                android:layout_width="@dimen/dp_48"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@mipmap/jft_icon_clicksearch" />

            <EditText
                android:id="@+id/et_hs_input"
                style="@style/text_main_13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="请输入您要搜索的内容"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingRight="@dimen/dp_4"
                android:singleLine="true" />

        </LinearLayout>

        <TextView
            android:id="@+id/iv_home_type"
            style="@style/text_15_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableLeft="@mipmap/jft_but_classification"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_4"
            android:scaleType="center"
            android:text="分类" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_hs_zsort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hs_zsort"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="综合排序" />

            <ImageView
                android:id="@+id/iv_hs_zsort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jft_but_switch" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hs_xsort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_hs_xsort"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="销量排序" />

            <ImageView
                android:id="@+id/iv_hs_xsort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/jft_but_switch" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hs_values"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_homesh_values"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="价格排序" />

                <ImageView
                    android:id="@+id/iv_hs_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_homesh_values"
                    android:src="@mipmap/jft_but_ascendingorder" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_hs_logo_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/jft_but_switch" />

        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/gm_refhres_layout" />

</LinearLayout>