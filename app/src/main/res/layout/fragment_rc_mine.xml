<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".fragment.recruite.job.RcMineFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_210"
        android:scaleType="fitXY"
        android:src="@mipmap/jft_img_userpersonalcenterbackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30" />

        <TextView
            style="@style/text_17_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:gravity="center"
            android:text="我的"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/gm_4_white_bg_radio"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:gravity="center_vertical"
                android:text="完善微简历，获取更多关注，找到好工作，"
                android:textColor="#5769E7"
                android:textSize="@dimen/ts_12" />

            <LinearLayout
                android:id="@+id/ll_rc_mine_go_resume"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即编辑简历"
                    android:textColor="#5769E7"
                    android:textSize="@dimen/ts_12" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#5769E7" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_3"
                android:src="@mipmap/jft_but_personalcentercircle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_135"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/gm_white_4_raido"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_rc_mine_hear"
                android:layout_width="@dimen/dp_80"
                android:scaleType="fitXY"
                android:layout_height="@dimen/dp_80"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@mipmap/ic_default_picture" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rc_mine_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:textColor="@color/color_444A53"
                        android:textSize="@dimen/ts_19"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/text_fu_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/" />

                    <TextView
                        android:id="@+id/tv_rc_mine_sex"
                        style="@style/text_fu_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="先生" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rc_mine_work"
                        style="@style/text_main_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="前台收银" />

                    <View
                        style="@style/line_with_one"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_2" />

                    <TextView
                        android:id="@+id/tv_rc_mine_time"
                        style="@style/text_main_13"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="工作两年" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rc_mine_age"
                        style="@style/text_fu_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23岁" />

                    <View
                        style="@style/line_with_one"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10" />

                    <TextView
                        android:id="@+id/tv_rc_mine_edu"
                        style="@style/text_fu_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大专" />

                    <View
                        style="@style/line_with_one"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10" />

                    <TextView
                        android:id="@+id/tv_rc_mine_address"
                        style="@style/text_fu_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="郑州" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/gm_4_white_bg_radio"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_main_13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="我的投递" />

                <TextView
                    android:id="@+id/tv_rc_mine_lookmore"
                    style="@style/text_fu_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/jft_but_arrow"
                    android:text="查看全部" />
            </LinearLayout>

            <View
                style="@style/line_height_one"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_rc_mine_deliver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_rc_mine_delivernumber"
                        style="@style/text_main_17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        style="@style/text_main_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center"
                        android:text="已投递" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_rc_mine_look"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_rc_mine_looknumber"
                        style="@style/text_main_17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        style="@style/text_main_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center"
                        android:text="被查看" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_rc_mine_interview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_rc_mine_interviewnumber"
                        style="@style/text_main_17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        style="@style/text_main_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center"
                        android:text="邀面试" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_rc_mine_nosuitable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_rc_mine_suitablenumebr"
                        style="@style/text_main_17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        style="@style/text_main_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center"
                        android:text="不合适" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/gm_4_white_bg_radio"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_rc_mine_collect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                style="@style/text_main_15"
                android:drawableRight="@mipmap/jft_but_personalcenterforward"
                android:gravity="center_vertical"
                android:text="收藏职位" />

            <View style="@style/line_height_one" />

            <TextView
                android:id="@+id/tv_rc_mine_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                style="@style/text_main_15"
                android:drawableRight="@mipmap/jft_but_personalcenterforward"
                android:gravity="center_vertical"
                android:text="隐藏设置" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>