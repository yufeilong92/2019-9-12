<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_10"
    tools:ignore="MissingConstraints">


    <com.tsyc.tianshengyoucai.view.MyNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/ctl_btm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_13"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"/>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_rectangle"
                android:paddingStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingTop="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_20">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_18" />

                <com.amap.api.maps.MapView
                    android:id="@+id/aMapView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:layout_marginTop="@dimen/dp_10"
                    app:layout_constraintTop_toBottomOf="@id/tv_name" />

                <View
                    android:id="@+id/line1"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_15"
                    android:background="@color/line_color"
                    app:layout_constraintBottom_toBottomOf="@id/tv_self_time_tip"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/aMapView"
                    app:layout_constraintTop_toTopOf="@id/tv_self_time" />


                <TextView
                    android:id="@+id/tv_self_time_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="自提时间"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/aMapView" />


                <TextView
                    android:id="@+id/tv_self_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableEnd="@mipmap/jft_but_arrow"
                    android:drawablePadding="@dimen/dp_5"
                    android:hint="选择自提时间"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/ts_13"
                    app:layout_constraintTop_toBottomOf="@id/tv_self_time_tip" />


                <TextView
                    android:id="@+id/tv_level_phone_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="预留手机"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/aMapView" />


                <TextView
                    android:id="@+id/tv_level_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableEnd="@mipmap/jft_but_editorreservedmobilenumber"
                    android:drawablePadding="@dimen/dp_5"
                    android:hint="预留手机号"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/ts_13"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_level_phone_tip" />


                <CheckBox
                    android:id="@+id/cb_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="同意"
                    android:textColor="@color/color_7B8391"
                    android:textSize="@dimen/ts_13"
                    app:layout_constraintTop_toBottomOf="@id/tv_self_time" />


                <TextView
                    android:id="@+id/tv_self_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="《用户到店自取服务协议》"
                    android:textColor="@color/color_5769E7"
                    app:layout_constraintBottom_toBottomOf="@id/cb_agreement"
                    app:layout_constraintLeft_toRightOf="@id/cb_agreement"
                    app:layout_constraintTop_toTopOf="@id/cb_agreement" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_white_rectangle"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingTop="@dimen/dp_12"
                app:layout_constraintTop_toBottomOf="@id/ctl_address">


                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:text="订单信息"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15" />


                <RelativeLayout
                    android:id="@+id/rl_img"
                    android:layout_width="@dimen/dp_84"
                    android:layout_height="@dimen/dp_84"
                    android:layout_marginTop="@dimen/dp_15"
                    android:padding="@dimen/dp_2"
                    app:layout_constraintLeft_toLeftOf="@id/tv_shop_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_shop_name">

                    <ImageView
                        android:id="@+id/iv_order_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_order_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_14"
                    android:lines="1"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/rl_img"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/rl_img"
                    tools:text="111111111111111111" />


                <TextView
                    android:id="@+id/tv_order_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_8"
                    android:lines="1"
                    android:textColor="@color/color_7B8391"
                    android:textSize="@dimen/ts_11"
                    app:layout_constraintBottom_toBottomOf="@id/rl_img"
                    app:layout_constraintLeft_toRightOf="@id/rl_img"
                    app:layout_constraintTop_toTopOf="@id/rl_img"
                    tools:text="111111111111111111" />


                <TextView
                    android:id="@+id/tv_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_14"
                    android:textColor="@color/tab_color"
                    app:layout_constraintBottom_toBottomOf="@id/rl_img"
                    app:layout_constraintLeft_toRightOf="@id/rl_img"
                    tools:text="111" />

                <TextView
                    android:id="@+id/tv_order_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_13"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/tv_order_price"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_order_price" />


                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="center"
                    android:text="购买数量"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15"
                    app:layout_constraintTop_toBottomOf="@id/tv_order_count" />


                <TextView
                    android:id="@+id/tv_dialog_subtract"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/bg_dialog_gray_select"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintBottom_toBottomOf="@id/tv_total"
                    app:layout_constraintRight_toLeftOf="@id/tv_buy_number"
                    app:layout_constraintTop_toTopOf="@id/tv_total" />

                <TextView
                    android:id="@+id/tv_buy_number"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/bg_dialog_white_select"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintBottom_toBottomOf="@id/tv_total"
                    app:layout_constraintRight_toLeftOf="@id/tv_dialog_add"
                    app:layout_constraintTop_toTopOf="@id/tv_total" />

                <TextView
                    android:id="@+id/tv_dialog_add"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:background="@drawable/bg_dialog_gray_select"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="@dimen/ts_17"
                    app:layout_constraintBottom_toBottomOf="@id/tv_total"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_total" />


                <TextView
                    android:id="@+id/tv_user_say"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="center"
                    android:text="买家留言："
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_15"
                    app:layout_constraintTop_toBottomOf="@id/tv_total" />

                <EditText
                    android:id="@+id/et_leave_msg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@null"
                    android:maxLength="50"
                    android:paddingTop="@dimen/dp_12"
                    android:hint="选填（50字以内）"
                    android:textColor="@color/color_444A53"
                    android:textColorHint="@color/edit_hint_color"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintLeft_toRightOf="@id/tv_user_say"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_user_say" />

            </android.support.constraint.ConstraintLayout>

            <View style="@style/line_height_one"
                android:id="@+id/view_line_one"
                />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_rectangle"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_coupon_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45"
                    android:drawableStart="@mipmap/jft_icon_redpacklabel"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:text="红包"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                  />

                <TextView
                    android:id="@+id/tv_choose_coupon"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:hint="请选择红包"
                    android:paddingStart="@dimen/dp_10"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/ts_13"
                    app:layout_constraintBottom_toBottomOf="@id/tv_coupon_tip"
                    app:layout_constraintLeft_toRightOf="@id/tv_coupon_tip"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_coupon_tip" />
                <CheckBox
                    android:id="@+id/cb_use_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gender_selector"
                    android:button="@null"
                    android:clickable="false"
                    app:layout_constraintBottom_toBottomOf="@id/tv_choose_coupon"
                    app:layout_constraintTop_toTopOf="@id/tv_choose_coupon"
                    app:layout_constraintRight_toRightOf="parent"
                     />

            </android.support.constraint.ConstraintLayout>
            <View style="@style/line_height_one"
                android:id="@+id/view_line_two"
                />
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:id="@+id/ctl_coupon_selfs"
                android:background="@drawable/shape_white_rectangle">

                <TextView
                    android:id="@+id/tv_use_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45"
                    android:drawableStart="@mipmap/jft_icon_coupondeduction"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:text="优惠卷"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="请选择优惠券"
                    android:textColor="@color/tab_color"
                    android:id="@+id/tv_self_value"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_use_gold"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/cb_use_gold"
                    android:src="@mipmap/jft_but_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    app:layout_constraintBottom_toBottomOf="@id/tv_use_gold"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/ctl_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_white_rectangle"
                android:padding="@dimen/dp_11">

                <TextView
                    android:id="@+id/tv_apply_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_33"
                    android:gravity="center"
                    android:text="商品总额："
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14" />

                <TextView
                    android:id="@+id/tv_shop_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:gravity="right"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_apply_name"
                    app:layout_constraintLeft_toRightOf="@id/tv_apply_name"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_apply_name" />


                <TextView
                    android:id="@+id/tv_apply_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_33"
                    android:gravity="center"
                    android:text="邮费："
                    android:visibility="gone"
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintTop_toBottomOf="@id/tv_apply_name" />

                <TextView
                    android:id="@+id/tv_post_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:gravity="right"
                    android:visibility="gone"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_apply_time"
                    app:layout_constraintLeft_toRightOf="@id/tv_apply_time"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_apply_time" />
                <TextView
                    android:id="@+id/tv_sub_money_title"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_33"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="红包/优惠卷："
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintTop_toBottomOf="@id/tv_post_money" />

                <TextView
                    android:id="@+id/tv_sub_money"
                    app:layout_constraintLeft_toRightOf="@id/tv_sub_money_title"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_33"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="0"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintTop_toBottomOf="@id/tv_post_money" />


                <TextView
                    android:id="@+id/tv_apply_money"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_33"
                    android:gravity="center"
                    android:text="实付金额："
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintTop_toBottomOf="@id/tv_sub_money" />

                <TextView
                    android:id="@+id/tv_pay_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:gravity="right"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/ts_14"
                    app:layout_constraintBottom_toBottomOf="@id/tv_apply_money"
                    app:layout_constraintLeft_toRightOf="@id/tv_apply_money"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_apply_money" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="gone"
                android:background="@drawable/shape_white_rectangle"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_invite"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="邀请码："
                    android:textColor="@color/color_444A53"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/et_invite"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_444A53"
                    android:textColorHint="@color/edit_hint_color"
                    android:hint="无"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:singleLine="true"
                    app:layout_constraintLeft_toRightOf="@id/tv_invite"
                    app:layout_constraintRight_toRightOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40" />

        </LinearLayout>
    </com.tsyc.tianshengyoucai.view.MyNestedScrollView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ctl_btm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:paddingStart="@dimen/dp_20"
        android:background="@color/white"
        android:paddingEnd="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/tv_real_money_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付金额："
            android:textColor="@color/color_444A53"
            android:textSize="@dimen/ts_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_real_pay_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tab_color"
            android:textSize="@dimen/ts_14"
            app:layout_constraintBottom_toBottomOf="@id/tv_real_money_tip"
            app:layout_constraintLeft_toRightOf="@id/tv_real_money_tip"
            app:layout_constraintTop_toTopOf="@id/tv_real_money_tip" />

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/normal_red_btn_bg_"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_17"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>