<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_16"

    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/color_444A53"
        android:textSize="@dimen/ts_12"
        app:layout_constraintLeft_toRightOf="@id/iv_header"
        app:layout_constraintTop_toTopOf="@id/iv_header"
        tools:text="@string/app_name" />

    <com.tsyc.tianshengyoucai.view.StarBar
        android:id="@+id/sb_starBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        app:starCount="5"
        app:starDistance="5dp"
        app:starEmpty="@mipmap/icon_star_normal"
        app:starFill="@mipmap/icon_star_selected"
        app:starSize="@dimen/dp_10" />


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/edit_hint_color"
        android:textSize="@dimen/ts_11"
        app:layout_constraintBottom_toBottomOf="@id/iv_header"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintLeft_toRightOf="@id/iv_header"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        tools:text="2019-07-29" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/edit_hint_color"
        android:textSize="@dimen/ts_11"
        app:layout_constraintBottom_toBottomOf="@id/tv_date"
        app:layout_constraintLeft_toRightOf="@id/tv_date"
        app:layout_constraintTop_toTopOf="@id/tv_date"
        tools:text="2019-07-29" />

    <TextView
        android:id="@+id/tv_evaluate_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:lines="1"
        android:textColor="@color/color_444A53"
        android:textSize="@dimen/ts_13"
        app:layout_constraintLeft_toLeftOf="@id/tv_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        tools:text="@string/app_name" />

</android.support.constraint.ConstraintLayout>