<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_boss_job_title"
            style="@style/text_main_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="标题"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_boss_job_money"
            style="@style/text_14_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4k-5h" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_boss_job_tag"
            style="@style/text_fu_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="标题/标题/标题/标题" />

        <TextView
            android:id="@+id/tv_item_boss_job_time"
            style="@style/text_fu_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5555" />
    </LinearLayout>

    <View style="@style/line_height_one"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"/>
</LinearLayout>