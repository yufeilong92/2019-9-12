<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_edu_title"
                style="@style/text_main_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:gravity="center_vertical"
                android:text="清华大学 本科" />

            <ImageView
                android:id="@+id/iv_edu_go"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:src="@mipmap/jft_but_blueforward" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_edu_content"
            style="@style/text_main_12"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:gravity="center_vertical"
            android:text="2014.09-2017.06 / 图形图像制作与处理" />
    </LinearLayout>
</LinearLayout>