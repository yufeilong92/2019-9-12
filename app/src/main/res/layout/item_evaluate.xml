<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/gm_white_4_raido"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_evalute_picture"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_evalute_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内容" />

                <ImageView
                    android:id="@+id/iv_item_evalute_star_one"
                    style="@style/star"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_4" />

                <ImageView
                    android:id="@+id/iv_item_evalute_star_two"
                    style="@style/star"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/iv_item_evalute_star_three"
                    style="@style/star"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/iv_item_evalute_star_four"
                    style="@style/star"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/iv_item_evalute_star_five"
                    style="@style/star"
                    android:layout_gravity="center" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_evaluate_size"
                style="@style/text_fu_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:text="" />

            <TextView
                android:id="@+id/tv_evaluate_content"
                style="@style/text_main_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_16"
                android:text="" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/rlv_evaluate_img"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>