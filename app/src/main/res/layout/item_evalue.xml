<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_evalute_hear"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:src="@mipmap/ic_default_picture" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_evalute_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内容" />

                <ImageView
                    android:id="@+id/iv_item_evalute_star_one"
                    style="@style/star"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_4" />

                <ImageView
                    android:id="@+id/iv_item_evalute_star_two"
                    style="@style/star"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/iv_item_evalute_star_three"
                    style="@style/star"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/iv_item_evalute_star_four"
                    style="@style/star"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/iv_item_evalute_star_five"
                    style="@style/star"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_evaluate_time"
                    style="@style/text_fu_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-05-03" />

                <TextView
                    android:id="@+id/tv_evaluate_size"
                    style="@style/text_fu_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_evaluate_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_evaluate_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gm_gray_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_evalute_good_img"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_84" />

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_evaluate_good_title"
                style="@style/text_main_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="内容" />

            <TextView
                android:id="@+id/tv_evaluate_good_size"
                android:layout_marginTop="@dimen/dp_8"
                style="@style/text_fu_12"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容" />

            <TextView
                android:id="@+id/tv_evaluate_good_values"
                android:layout_marginTop="@dimen/dp_8"
                style="@style/text_red_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/text_red_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@drawable/gm_4_red_radio_line"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_4"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_4"
        android:text="回复" />
</LinearLayout>