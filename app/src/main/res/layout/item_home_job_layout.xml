<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/gm_white_4_raido"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">

            <TextView
                android:id="@+id/tv_item_home_job_title"
                style="@style/text_main_16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="内容"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_home_job_money"
                style="@style/text_16_yellow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="内容" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_home_job_company"
            style="@style/text_fu_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="公司" />

        <com.tsyc.tianshengyoucai.view.FlowLayout
            android:id="@+id/fl_item_home_job_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">

            <ImageView
                android:id="@+id/iv_item_home_job_hear"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tv_item_home_job_name"
                style="@style/text_main_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/iv_item_home_job_hear"
                android:text="2222222" />

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>