<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/gm_white_4_raido"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_item_home_msg_title"
                style="@style/text_main_17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="标题"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_home_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gm_4_gray_bg_circle"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_4"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_4"
                android:text="删除" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_home_msg_content"
            style="@style/text_fu_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="内容" />

        <View
            style="@style/line_height_one"
            android:layout_marginTop="@dimen/dp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/dp_21"
                android:layout_marginEnd="@dimen/dp_8"
                android:background="@mipmap/icon_round"
                android:layout_height="@dimen/dp_21" />

            <TextView
                android:id="@+id/tv_item_home_msg_app"
                style="@style/text_fu_12"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_21"
                android:layout_weight="1"

                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="X街" />

            <TextView
                android:id="@+id/tv_item_home_msg_time"
                style="@style/text_fu_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>