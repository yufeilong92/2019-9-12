<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_16">

        <ImageView
            android:id="@+id/iv_item_rc_msg_hear"
            android:layout_width="@dimen/dp_48"
            android:scaleType="fitXY"
            android:layout_height="@dimen/dp_48"
            android:src="@mipmap/ic_default_picture" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_rc_msg_title"
                    style="@style/text_main_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_item_rc_msg_time"
                    style="@style/text_fu_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_rc_msg_content"
                style="@style/text_fu_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:layout_marginTop="@dimen/dp_8" />
            <View style="@style/line_height_one"
                android:layout_marginTop="@dimen/dp_8"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>