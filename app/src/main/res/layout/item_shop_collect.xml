<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/gm_white_4_raido"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16">

        <ImageView
            android:id="@+id/iv_item_shop_collect"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_84"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_default_picture" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_shopcollect_title"
                style="@style/text_main_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_12"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_item_shopcollect_star_one"
                        style="@style/star" />

                    <ImageView
                        android:id="@+id/iv_item_shopcollect_star_two"
                        style="@style/star" />

                    <ImageView
                        android:id="@+id/iv_item_shopcollect_star_three"
                        style="@style/star" />

                    <ImageView
                        android:id="@+id/iv_item_shopcollect_star_four"
                        style="@style/star" />

                    <ImageView
                        android:id="@+id/iv_item_shopcollect_star_five"
                        style="@style/star" />

                    <TextView
                        android:id="@+id/tv_item_shopcollect_tag"
                        style="@style/text_10_yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:singleLine="true" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_shopcollect_address"
                style="@style/text_fu_12"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_12"
                android:drawableLeft="@mipmap/jft_icon_address"
                android:drawablePadding="@dimen/dp_4"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="222222222222" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_shopcollect_type1"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/shape_orange_rectangle_2"
                    android:gravity="center"
                    android:text="内容"
                    android:textColor="@color/color_orange"
                    android:textSize="@dimen/ts_10" />

                <TextView
                    android:id="@+id/tv_item_shopcollect_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@drawable/shape_orange_rectangle_2"
                    android:drawableStart="@mipmap/jft_img_payoff"
                    android:drawablePadding="@dimen/dp_4"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:text="内容"
                    android:textColor="@color/color_orange"
                    android:textSize="@dimen/ts_10" />


                <TextView
                    android:id="@+id/tv_item_shopcollect_type3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@drawable/shape_red_rectangle_2"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:text="内容"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/ts_10" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_shop_canner"
                android:background="@drawable/gm_4_white_radio_line"
                android:layout_width="wrap_content"
                style="@style/text_main_13"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_4"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="取消收藏" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>