<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_work_tag_canner"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消" />

            <View style="@style/line_with_one" />

            <TextView
                android:id="@+id/tv_item_work_tag_sure"
                style="@style/text_bule_13"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认" />
        </LinearLayout>

        <View style="@style/line_height_one" />
       <ScrollView
           android:fillViewport="true"
           android:layout_width="match_parent"
           android:layout_height="match_parent">


        <com.tsyc.tianshengyoucai.view.FlowLayout
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/fl_work_tag_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
       </ScrollView>
    </LinearLayout>

</LinearLayout>