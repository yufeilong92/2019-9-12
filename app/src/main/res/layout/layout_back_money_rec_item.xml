<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_15"
    tools:ignore="MissingConstraints">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ctl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_192"
        android:background="@drawable/shape_white_rectangle"
        android:paddingTop="@dimen/dp_30">


        <ImageView
            android:id="@+id/iv_bag"
            android:layout_width="@dimen/dp_62"
            android:layout_height="@dimen/dp_62"
            android:background="@mipmap/jft_but_releaseredenvelopes"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


        <TextView
            android:id="@+id/tv_bag_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:hint="@string/hint_bag_type"
            android:textColor="@color/color_444A53"
            android:textColorHint="@color/color_444A53"
            android:textSize="@dimen/ts_17"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_bag" />

        <TextView
            android:id="@+id/tv_bag_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/hint_bag_detail"
            android:textColor="@color/color_7B8391"
            android:textSize="@dimen/ts_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_bag_type" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>