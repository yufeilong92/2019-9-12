<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_92"
    android:paddingStart="@dimen/dp_15"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_10">


    <com.tsyc.tianshengyoucai.view.FlowRadioGroup
        android:id="@+id/frg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/rb_all"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_31"
            android:background="@drawable/evaluate_type_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:text="全部  0"
            android:textColor="@drawable/evaluate_type_text_color"
            android:textSize="@dimen/ts_12" />

        <RadioButton
            android:id="@+id/rb_news"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_31"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/evaluate_type_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:text="最新"
            android:textColor="@drawable/evaluate_type_text_color"
            android:textSize="@dimen/ts_12" />

        <RadioButton
            android:id="@+id/rb_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_31"
            android:background="@drawable/evaluate_type_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:text="有图  0"
            android:textColor="@drawable/evaluate_type_text_color"
            android:textSize="@dimen/ts_12" />

        <RadioButton
            android:id="@+id/rb_good"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_31"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/evaluate_type_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:text="好评 0"
            android:textColor="@drawable/evaluate_type_text_color"
            android:textSize="@dimen/ts_12" />

        <RadioButton
            android:id="@+id/rb_bad"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/evaluate_type_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:text="差评  0"
            android:textColor="@drawable/evaluate_type_text_color"
            android:textSize="@dimen/ts_12" />

    </com.tsyc.tianshengyoucai.view.FlowRadioGroup>

</android.support.constraint.ConstraintLayout>