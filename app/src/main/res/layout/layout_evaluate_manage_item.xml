<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/white"
    android:padding="@dimen/dp_15"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:textColor="@color/color_444A53"
        android:textSize="@dimen/ts_12"
        app:layout_constraintLeft_toRightOf="@id/iv_image"
        app:layout_constraintTop_toTopOf="@id/iv_image"
        tools:text="121212122" />

    <com.tsyc.tianshengyoucai.view.StarBar
        android:id="@+id/sb_starBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        app:starCount="5"
        app:starDistance="5dp"
        app:starEmpty="@mipmap/icon_star_normal"
        app:starFill="@mipmap/icon_star_selected"
        app:starSize="@dimen/dp_10" />

    <TextView
        android:id="@+id/tv_evaluate_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/edit_hint_color"
        android:textSize="@dimen/ts_11"
        app:layout_constraintBottom_toBottomOf="@id/iv_image"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintLeft_toRightOf="@id/iv_image"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        tools:text="121212121" />


    <TextView
        android:id="@+id/tv_evaluate_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textColor="@color/color_444A53"
        android:text="1212121212"
        android:textSize="@dimen/ts_13"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_image" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_evaluate_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        app:layout_constraintLeft_toLeftOf="@id/tv_evaluate_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_evaluate_content" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/ctl_desc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_113"
        android:paddingTop="@dimen/dp_12"
        android:visibility="gone"
        android:paddingStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/color_FA"
        app:layout_constraintTop_toBottomOf="@id/rv_evaluate_img">


        <ImageView
            android:id="@+id/iv_shop_image"
            android:layout_width="@dimen/dp_89"
            android:layout_height="@dimen/dp_84"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:lines="2"
            app:layout_constraintLeft_toRightOf="@id/iv_shop_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_shop_image"
            tools:text="111111111111" />


        <TextView
            android:id="@+id/tv_shop_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_5"
            android:textColor="@color/color_7B8391"
            android:textSize="@dimen/ts_12"
            android:lines="1"
            app:layout_constraintLeft_toLeftOf="@id/tv_shop_name"
            app:layout_constraintLeft_toRightOf="@id/iv_shop_image"
            app:layout_constraintTop_toBottomOf="@id/tv_shop_name"
            tools:text="111111111111" />

        <TextView
            android:id="@+id/tv_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tab_color"
            android:textSize="@dimen/ts_15"
            app:layout_constraintBottom_toBottomOf="@id/iv_shop_image"
            app:layout_constraintLeft_toLeftOf="@id/tv_shop_name"
            app:layout_constraintLeft_toRightOf="@id/iv_shop_image"
            tools:text="111111111111" />

    </android.support.constraint.ConstraintLayout>


    <TextView
        android:id="@+id/tv_evaluate_reply"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_red_rectangle_2"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/text_evaluate_reply"
        android:textColor="@color/tab_color"
        android:textSize="@dimen/ts_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ctl_desc" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ctl_shop_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_89"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_gray_job_normal_rectangle"
        android:padding="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@id/ctl_desc">


        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_13"
            android:background="@mipmap/jft_icon_businessreply" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/text_shop_reply"
            android:textColor="@color/color_444A53"
            android:textSize="@dimen/ts_12"
            app:layout_constraintTop_toTopOf="@id/iv_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_icon"
            app:layout_constraintLeft_toRightOf="@id/iv_icon" />

        <TextView
            android:id="@+id/tv_shop_reply"
            app:layout_constraintTop_toBottomOf="@id/iv_icon"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:lineSpacingExtra="@dimen/dp_8"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>