<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_137"
    android:background="@drawable/shape_white_rectangle"
    android:padding="@dimen/dp_10"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/tv_pos_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_444A53"
        android:textSize="@dimen/ts_15"
        android:textStyle="bold"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_pos_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_orange"
        android:textSize="@dimen/ts_16"
        app:layout_constraintBottom_toBottomOf="@id/tv_pos_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_pos_name"
        tools:text="444444" />


    <TextView
        android:id="@+id/tv_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_7"
        app:layout_constraintTop_toBottomOf="@id/tv_pos_name" />


    <TextView
        android:id="@+id/tv_work_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@drawable/shape_f8_rectangle"
        android:padding="@dimen/dp_6"
        app:layout_constraintTop_toBottomOf="@id/tv_company_name"
        tools:text="郑州市" />

    <TextView
        android:id="@+id/tv_work_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/shape_f8_rectangle"
        android:padding="@dimen/dp_6"
        app:layout_constraintBottom_toBottomOf="@id/tv_work_address"
        app:layout_constraintLeft_toRightOf="@id/tv_work_address"
        app:layout_constraintTop_toTopOf="@id/tv_work_address"
        tools:text="1-3年" />

    <TextView
        android:id="@+id/tv_work_edu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/shape_f8_rectangle"
        android:padding="@dimen/dp_6"
        app:layout_constraintBottom_toBottomOf="@id/tv_work_age"
        app:layout_constraintLeft_toRightOf="@id/tv_work_age"
        app:layout_constraintTop_toTopOf="@id/tv_work_age"
        tools:text="大专" />


    <RelativeLayout
        android:id="@+id/rl_img"
        android:layout_width="@dimen/dp_23"
        android:layout_height="@dimen/dp_23"
        android:background="@drawable/shape_normal_oval"
        android:padding="@dimen/dp_3"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_work_address">

        <ImageView
            android:id="@+id/iv_pos_img"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_pos_leader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/rl_img"
        app:layout_constraintLeft_toRightOf="@id/rl_img"
        app:layout_constraintTop_toTopOf="@id/rl_img"
        tools:text="@string/app_name" />

</android.support.constraint.ConstraintLayout>