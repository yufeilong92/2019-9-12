<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="@dimen/dp_118"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_90"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/dp_87"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/color_444A53"
        android:textSize="@dimen/ts_15"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintTop_toTopOf="@id/iv_icon"
        tools:text="@string/app_name" />

    <com.tsyc.tianshengyoucai.view.StarBar
        android:id="@+id/sb_starBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:starCount="5"
        app:starDistance="5dp"
        app:starEmpty="@mipmap/icon_star_normal"
        app:starFill="@mipmap/icon_star_selected"
        app:starSize="@dimen/dp_10" />

    <TextView
        android:id="@+id/tv_share_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/color_EF9823"
        android:textSize="@dimen/ts_10"
        app:layout_constraintBottom_toBottomOf="@id/sb_starBar"
        app:layout_constraintLeft_toRightOf="@id/sb_starBar"
        app:layout_constraintTop_toTopOf="@id/sb_starBar"
        tools:text="分享的佣金" />


    <ImageView
        android:id="@+id/iv_address_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@mipmap/jft_icon_address"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintStart_toStartOf="@id/sb_starBar"
        app:layout_constraintTop_toBottomOf="@id/tv_share_back" />

    <TextView
        android:id="@+id/tv_shop_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ts_6"
        android:singleLine="true"
        android:textColor="@color/color_7B8391"
        android:textSize="@dimen/ts_12"
        app:layout_constraintBottom_toBottomOf="@id/iv_address_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_address_icon"
        app:layout_constraintTop_toTopOf="@id/iv_address_icon"
        tools:text="分享的佣金" />

    <TextView
        android:id="@+id/tv_item_type1"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_16"
        android:background="@drawable/shape_orange_rectangle_2"
        android:gravity="center"
        android:textColor="@color/color_orange"
        android:textSize="@dimen/ts_10"
        app:layout_constraintBottom_toBottomOf="@id/iv_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintStart_toStartOf="@id/iv_address_icon"
        tools:text="类型" />

    <TextView
        android:id="@+id/tv_item_type2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/shape_orange_rectangle_2"
        android:gravity="center"
        android:textColor="@color/color_orange"
        android:drawableStart="@mipmap/jft_img_payoff"
        android:drawablePadding="@dimen/dp_4"
        android:paddingStart="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_5"
        android:textSize="@dimen/ts_10"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_type1"
        app:layout_constraintLeft_toRightOf="@id/tv_item_type1"
        app:layout_constraintTop_toTopOf="@id/tv_item_type1"
        tools:text="类型" />


    <TextView
        android:id="@+id/tv_item_type3"
        android:layout_width="wrap_content"
        android:paddingEnd="@dimen/dp_5"
        android:paddingStart="@dimen/dp_5"
        android:layout_height="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/shape_red_rectangle_2"
        android:gravity="center"
        android:textColor="@color/tab_color"
        android:textSize="@dimen/ts_10"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_type2"
        app:layout_constraintLeft_toRightOf="@id/tv_item_type2"
        app:layout_constraintTop_toTopOf="@id/tv_item_type2"
        tools:text="类型" />


</android.support.constraint.ConstraintLayout>