<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_44"
    android:paddingEnd="@dimen/dp_15"
    tools:ignore="MissingConstraints">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:background="@mipmap/jft_icon_unselectedlogistics"
        />


    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        android:background="@color/color_E7EEF7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/iv_icon"
        app:layout_constraintRight_toRightOf="@id/iv_icon"
        app:layout_constraintTop_toBottomOf="@id/iv_icon" />


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/edit_hint_color"
        android:textSize="@dimen/ts_12"
        app:layout_constraintBottom_toBottomOf="@id/iv_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_icon"
        tools:text="12121212211" />

    <TextView
        android:id="@+id/tv_shop_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_7B8391"
        android:textSize="@dimen/ts_14"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="@id/tv_date"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="12121212211" />

</android.support.constraint.ConstraintLayout>