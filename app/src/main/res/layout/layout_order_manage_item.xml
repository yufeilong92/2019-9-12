<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_marginEnd="@dimen/dp_12"
    android:background="@drawable/shape_white_rectangle"
    android:paddingEnd="@dimen/ts_12"
    tools:ignore="MissingConstraints">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_43"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_15"
        android:drawableStart="@mipmap/jft_icon_commodityorderlabel"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/text_shop_order"
        android:textColor="@color/color_444A53"
        android:textSize="@dimen/ts_14"
        app:layout_constraintBottom_toBottomOf="@id/tv_order_status"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_order_status"
        app:layout_constraintTop_toTopOf="@id/tv_order_status" />

    <TextView
        android:id="@+id/tv_order_status"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_43"
        android:layout_marginEnd="@dimen/dp_14"
        android:gravity="center_vertical"
        android:textColor="@color/tab_color"
        android:textSize="@dimen/ts_14"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="待付款" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1_"
        android:layout_marginBottom="@dimen/dp_14"
        android:background="@color/color_E9EFF7"
        app:layout_constraintBottom_toTopOf="@id/rl_img" />

    <RelativeLayout
        android:id="@+id/rl_img"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_15"
        android:padding="@dimen/dp_2"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <ImageView
            android:id="@+id/iv_order_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_order_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:lines="2"
        android:textColor="@color/color_444A53"
        android:textSize="@dimen/ts_14"
        android:ellipsize="end"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/tv_order_shop_price"
        app:layout_constraintLeft_toRightOf="@id/rl_img"
        app:layout_constraintTop_toTopOf="@id/rl_img"
        tools:text="1" />


    <TextView
        android:id="@+id/tv_order_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:lines="1"
        android:textColor="@color/color_7B8391"
        android:textSize="@dimen/ts_11"
        app:layout_constraintBottom_toBottomOf="@id/rl_img"
        app:layout_constraintLeft_toRightOf="@id/rl_img"
        tools:text="111111111111111111" />

    <TextView
        android:id="@+id/tv_order_shop_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_14"
        android:lines="1"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/color_7B8391"
        android:textSize="@dimen/ts_11"
        app:layout_constraintTop_toTopOf="@id/tv_order_name"
        app:layout_constraintLeft_toRightOf="@id/tv_order_name"
        tools:text="1111111111" />

    <TextView
        android:id="@+id/tv_order_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_14"
        android:textColor="@color/color_444A53"
        app:layout_constraintBottom_toBottomOf="@id/tv_order_desc"
        app:layout_constraintTop_toTopOf="@id/tv_order_desc"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="111" />

    <TextView
        android:id="@+id/tv_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginEnd="@dimen/dp_14"
        android:textColor="@color/color_444A53"
        android:textSize="@dimen/ts_13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_img"
        tools:text="4454545" />


    <TextView
        android:id="@+id/tv_total_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:textColor="@color/color_7B8391"
        android:textSize="@dimen/ts_12"
        app:layout_constraintBottom_toBottomOf="@id/tv_order_price"
        app:layout_constraintRight_toLeftOf="@id/tv_order_price"
        app:layout_constraintTop_toBottomOf="@id/rl_img"
        app:layout_constraintTop_toTopOf="@id/tv_order_price"
        tools:text="6666" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1_"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/color_E9EFF7"
        app:layout_constraintTop_toBottomOf="@id/tv_order_price" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ctl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:layout_marginTop="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1">

        <TextView
            android:id="@+id/tv_order_gray_status"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_35"
            android:layout_marginEnd="@dimen/dp_14"
            android:background="@drawable/shape_gray_rectangle"
            android:gravity="center"
            android:textSize="@dimen/ts_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_order_red_status"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_order_red_status"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_35"
            android:layout_marginEnd="@dimen/dp_14"
            android:background="@drawable/shape_red_rectangle_2"
            android:gravity="center"
            android:textColor="@color/tab_color"
            android:textSize="@dimen/ts_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>