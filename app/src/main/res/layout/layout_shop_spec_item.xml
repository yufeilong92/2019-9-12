<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:layout_marginTop="@dimen/dp_10"
    tools:ignore="MissingConstraints">


    <EditText
        android:id="@+id/et_spec"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_39"
        android:background="@drawable/shape_gray_rectangle"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:padding="@dimen/dp_10"
        android:hint="规格选项"
        android:maxLength="8"
        android:textColor="@color/color_444A53"
        android:textSize="@dimen/ts_15"
        app:layout_constraintHorizontal_weight="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/et_price" />

    <EditText
        android:id="@+id/et_price"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_39"
        android:layout_marginStart="@dimen/dp_8"
        android:background="@drawable/shape_gray_rectangle"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:hint="价格"
        android:padding="@dimen/dp_10"
        android:maxLength="8"
        android:inputType="numberDecimal"
        android:textColor="@color/color_444A53"
        android:textSize="@dimen/ts_15"
        app:layout_constraintHorizontal_weight="0.8"
        app:layout_constraintLeft_toRightOf="@id/et_spec"
        app:layout_constraintRight_toLeftOf="@id/et_count" />

    <EditText
        android:id="@+id/et_count"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_39"
        android:layout_marginStart="@dimen/dp_8"
        android:background="@drawable/shape_gray_rectangle"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:hint="库存"
        android:padding="@dimen/dp_10"
        android:maxLength="8"
        android:inputType="number"
        android:textColor="@color/color_444A53"
        android:textSize="@dimen/ts_15"
        app:layout_constraintHorizontal_weight="0.8"
        app:layout_constraintLeft_toRightOf="@id/et_price"
        app:layout_constraintRight_toLeftOf="@id/et_inner_price"
        />


    <EditText
        android:id="@+id/et_inner_price"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_39"
        android:layout_marginStart="@dimen/dp_8"
        android:background="@drawable/shape_gray_rectangle"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:padding="@dimen/dp_10"
        android:visibility="gone"
        android:hint="内部价"
        android:inputType="numberDecimal"
        android:textColor="@color/color_444A53"
        android:textSize="@dimen/ts_15"
        android:maxLength="8"
        app:layout_constraintHorizontal_weight="0.8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/et_count"
        app:layout_constraintRight_toLeftOf="@id/rl_delete" />


    <RelativeLayout
        android:id="@+id/rl_delete"
        android:layout_width="@dimen/dp_30"
        android:layout_height="match_parent"
        android:gravity="right|center_vertical"
        app:layout_constraintRight_toRightOf="parent">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/jft_but_specificationclosed" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
