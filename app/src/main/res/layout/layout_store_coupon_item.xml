<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_51"
    android:background="@drawable/shape_orange_rectangle_fill"
    android:paddingStart="@dimen/dp_7"
    android:layout_marginTop="@dimen/dp_5"
    android:paddingEnd="@dimen/dp_8"
    tools:ignore="MissingConstraints">


    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_764B1D"
        android:textSize="@dimen/ts_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_coupon_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_7"
        android:drawableStart="@mipmap/jft_icon_shopcouponicon"
        android:drawablePadding="@dimen/dp_5"
        app:layout_constraintRight_toLeftOf="@id/tv_coupon"
        android:textColor="@color/color_764B1D"
        android:textSize="@dimen/ts_11"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_money"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_coupon"
        android:layout_width="@dimen/dp_65"
        android:layout_height="wrap_content"
        android:text="领取"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@color/color_764B1D"
        android:textSize="@dimen/ts_11"
        android:paddingStart="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_15"
        android:background="@color/white"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_coupon_tip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_coupon" />

</android.support.constraint.ConstraintLayout>