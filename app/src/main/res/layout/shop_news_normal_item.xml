<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="@dimen/dp_18"
    android:paddingTop="@dimen/dp_13"
    android:paddingEnd="@dimen/dp_13"
    android:paddingBottom="@dimen/dp_10"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/color_444A53"
        android:textSize="@dimen/ts_16" />

    <ImageView
        android:id="@+id/iv_left_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_14"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_center_image"
        app:layout_constraintTop_toBottomOf="@id/tv_news_title" />


    <ImageView
        android:id="@+id/iv_center_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_75"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_4"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/iv_left_image"
        app:layout_constraintRight_toLeftOf="@id/iv_right_image"
        app:layout_constraintTop_toBottomOf="@id/tv_news_title" />


    <ImageView
        android:id="@+id/iv_right_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_14"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/iv_center_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_news_title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_14"
        app:layout_constraintTop_toBottomOf="@id/tv_news_title" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/recyclerView" />


</android.support.constraint.ConstraintLayout>