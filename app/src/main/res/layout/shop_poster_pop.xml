<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">


    <LinearLayout
        android:id="@+id/root_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_24"
            android:background="@color/white" />

        <include layout="@layout/layout_normal_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_40"
        android:background="@drawable/shape_white_rectangle"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/root_title"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300"
            android:layout_margin="@dimen/dp_1"
            android:scaleType="centerCrop" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingStart="@dimen/dp_5"
                android:textColor="@color/color_444A53"
                android:textSize="@dimen/ts_13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_price" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_30"
                android:background="@color/line_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_name"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="@dimen/dp_85"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/yellow_one"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toRightOf="@id/tv_name"
                app:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59"
            android:layout_marginTop="@dimen/dp_8"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5">

            <ImageView
                android:id="@+id/iv_qrcode"
                android:layout_width="@dimen/dp_51"
                android:layout_height="@dimen/dp_51"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_5"
                android:paddingTop="@dimen/dp_7"
                android:paddingEnd="@dimen/dp_5"
                android:text="① 图片保存到相册"
                android:textSize="@dimen/ts_12"
                app:layout_constraintLeft_toRightOf="@id/iv_qrcode"
                app:layout_constraintRight_toLeftOf="@id/iv_icon"
                app:layout_constraintTop_toTopOf="@id/iv_qrcode" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_7"
                android:text="② 打开微信扫一扫"
                android:textSize="@dimen/ts_12"
                app:layout_constraintBottom_toBottomOf="@id/iv_qrcode"
                app:layout_constraintLeft_toRightOf="@id/iv_qrcode"
                app:layout_constraintRight_toLeftOf="@id/iv_icon" />

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/dp_51"
                android:layout_height="@dimen/dp_51"
                android:background="@mipmap/logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/ll_save_img"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_47"
            android:background="@drawable/normal_red_btn_bg"
            android:gravity="center"
            app:layout_constraintRight_toLeftOf="@id/tv_wx"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/jft_arrow_down"
                android:drawablePadding="@dimen/dp_10"
                android:text="保存图片"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_17" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_wx"
            android:layout_width="@dimen/dp_45"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_bobilelogin_wechatlogin_default"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:text="微信"
            android:textSize="@dimen/ts_13"
            android:textColor="@color/color_444A53"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/dp_10"
            app:layout_constraintRight_toLeftOf="@id/tv_comm"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_comm"
            android:layout_width="@dimen/dp_45"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/friend"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:text="朋友圈"
            android:textSize="@dimen/ts_13"
            android:textColor="@color/color_444A53"
            android:layout_marginEnd="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>