<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"
        android:background="@color/white" />

    <include
        android:id="@+id/root_title"
        layout="@layout/layout_normal_title"
        app:layout_constraintTop_toBottomOf="@id/line1" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/ctl_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="所在区域:"
            android:textColor="@color/color_444A53"
            android:textSize="@dimen/ts_14" />

        <TextView
            android:id="@+id/tv_address_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_15"
            android:textColor="@color/color_444A53"
            android:hint="请选择省市区"
            android:textSize="@dimen/ts_15"
            app:layout_constraintLeft_toRightOf="@id/tv_name"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="请输入设置内容"
        android:paddingStart="@dimen/ts_15"
        android:paddingEnd="@dimen/ts_15"
        android:textColor="@color/color_444A53"
        android:textColorHint="@color/edit_hint_color"
        android:textSize="@dimen/ts_15"
        app:layout_constraintTop_toBottomOf="@id/root_title"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_24"
        android:background="@drawable/normal_red_btn_bg"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_17"
        app:layout_constraintTop_toBottomOf="@id/et_content" />

</LinearLayout>